{# Flash messages #}
{%- macro render() -%}
    {% with messages = get_flashed_messages(with_categories=True) %}
        {% if messages %}
            <div class="flash-messages">
            {% for category, msg in messages %}
                <div class="alert alert-{{ category }}" role="alert">
                {{ msg }}
                </div>
            {% endfor %}
            </div>
        {% endif %}
    {% endwith %}
{%- endmacro -%}
