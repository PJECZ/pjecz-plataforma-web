{%- endmacro -%}

{# Se crea formulario donde iran los inputs  #}
{%- macro form_create() -%}
        <div class="row" style="padding:0 0 10px 0;">
            <div class="card-body">
                <div class="row">
                    {{ caller()}}
                </div>
            </div>
        </div>
{%- endmacro -%}

{%- macro input_form(num_col, name, label) -%}
    <div class="col-{{num_col}}">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="registro_{{name}}" id="registro_{{name}}" placeholder="{{label}}">
            <label for="{{name}}">{{label}}</label>
        </div>
        {{ caller() }}
    </div>
{%- endmacro -%}

{%- macro boton(btn_name) -%}
    <div class="col-2">
        <button id="btn_add_reg" type="button" class="form-control btn btn-primary">{{btn_name}}</button>
    </div>
{%- endmacro -%}

{%- macro create_datatable(id,name_th,name_th2,name_th3,name_th4) -%}
