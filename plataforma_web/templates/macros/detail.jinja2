{%- macro card(title='', estatus='') -%}
    {% if estatus == 'B' %}
    <div class="card text-white bg-dark mb-3">
    {% else %}
    <div class="card mb-3">
    {% endif %}
        <div class="card-body">
            {% if title %}<h5 class="card-title">{{ title }}</h5>{% endif %}
            {{ caller () }}
        </div>
    </div>
{%- endmacro -%}

{%- macro label_value(label, value, link='') -%}
    {% if value != None and value != '' %}
        <div class="row">
            <div class="col-md-3 text-right">
                {{ label }}
            </div>
            <div class="col-md-9">
                {% if link %}
                <strong><a href="{{ link }}">{{ value }}</a></strong>
                {% else %}
                <strong>{{ value }}</strong>
                {% endif %}
            </div>
        </div>
    {% endif %}
{%- endmacro -%}

{%- macro label_value_new_tab(label, value, link) -%}
    {% if value != None and value != '' %}
        <div class="row">
            <div class="col-md-3 text-right">
                {{ label }}
            </div>
            <div class="col-md-9">
                <strong><a href="{{ link }}" target="_blank">{{ value }} <i class="fas fa-external-link-alt"></i></a></strong>
            </div>
        </div>
    {% endif %}
{%- endmacro -%}

{%- macro label_value_big(label, value, link='') -%}
    {% if value != None and value != '' %}
        <div class="row">
            <div class="col-md-3 text-right">
                <!-- No se muestra el label -->
            </div>
            <div class="col-md-9">
                {% if link %}
                <h3><a href="{{ link }}">{{ value }}</a></h3>
                {% else %}
                <h3>{{ value }}</h3>
                {% endif %}
            </div>
        </div>
    {% endif %}
{%- endmacro -%}

{%- macro label_value_boolean(label, value) -%}
    <div class="row">
        <div class="col-md-3 text-right">
            {{ label }}
        </div>
        <div class="col-md-9">
            {% if value %}<strong>Sí</strong>{% else %}No{% endif %}
        </div>
    </div>
{%- endmacro -%}

{%- macro button_for_modal(label, id) -%}
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{ id }}">
        {{ label }}
    </button>
{%- endmacro -%}

{%- macro modal(title, message, id, url) -%}
    <div class="modal fade" id="{{ id }}" tabindex="-1" aria-labelledby="{{ id }}Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="{{ id }}Label">{{ title }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ message }}
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" href="#" data-dismiss="modal">Cancelar</a>
                    <a class="btn btn-primary" href="{{ url }}">{{ title }}</a>
                </div>
            </div>
        </div>
    </div>
{%- endmacro -%}

{%- macro custom_javascript_delete_recover() -%}
    <script>
        function showModalDelete() { $('#modalDelete').modal() }
        function showModalRecover() { $('#modalRecover').modal() }
    </script>
{%- endmacro -%}

{# JavaScript Datatable #}
{%- macro datatable(table_id, order="asc") -%}
    <script>
        $('#{{ table_id }}').DataTable({
            {% if order == "asc" %}order: [[ 0, "asc" ]],{% endif %}
            {% if order == "desc" %}order: [[ 0, "desc" ]],{% endif %}
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Página _PAGE_ de _PAGES_",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
{%- endmacro -%}
