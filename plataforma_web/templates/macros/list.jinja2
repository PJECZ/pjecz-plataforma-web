{# Button #}
{%- macro button(label, url, icon) -%}
    <a class="btn btn-sm btn-outline-secondary" href="{{ url }}"><span class="iconify" data-icon="{{ icon }}"></span> {{ label }}</a>
{%- endmacro -%}

