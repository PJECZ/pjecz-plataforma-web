{%- macro page(label) -%}
    <div class="page-breadcrumb" style="margin-left:35px">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">{{ label }}</h4>
            </div>
        </div>
    </div>
{%- endmacro -%}

{%- macro pageR(label) -%}
    <div class="page-breadcrumb" style="margin-left:35px">
