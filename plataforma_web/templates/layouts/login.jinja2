{% extends 'layouts/base.jinja2' %}
{% import 'macros/flash.jinja2' as flash with context %}

{% block template_head %}
    <!-- Bootstrap 5 Login -->
    <link rel="stylesheet" type="text/css" href="https://storage.googleapis.com/pjecz-informatica/static/css/bs5-login.css">
    <!-- CSRF token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">
{% endblock %}

{% block main %}
    <div class="bg">
        <main class="form-signin">
            {% block welcome %}{% endblock %}
            {{ flash.render() }}
            {% block content %}{% endblock %}
        </main>
    </div>
{% endblock %}
