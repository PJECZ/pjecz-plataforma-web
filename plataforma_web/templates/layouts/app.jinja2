{% extends 'layouts/base.jinja2' %}
{% import 'macros/app.jinja2' as app %}
{% import 'macros/flash.jinja2' as flash with context %}
{% import 'macros/navigation.jinja2' as navigation %}

{% block template_head %}
    <!-- Bootstrap 5 Dashboard -->
    <link rel="stylesheet" type="text/css" href="https://storage.googleapis.com/pjecz-informatica/static/css/bs5-dashboard.css">
    <!-- CSRF token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">
{% endblock %}

{% block main %}
    <!-- Header -->
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow pjecz-bg-dark">
        <a id="headLogo" class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">
            <img class="mx-2" src="https://storage.googleapis.com/pjecz-informatica/static/images/logo.png" alt="PJECZ"  width="30" height="30">
            Plataforma Web
        </a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Buscar" aria-label="Buscar">
    </header>
    <!-- Container with navigation and main -->
    <div class="container-fluid h-100">
        <div class="row h-100">
            {% set tipo_menu = session.get('tipo_menu', 'not set') %}
            {% if tipo_menu == 'colapsado' %}
            <nav id="sidebarMenu" class="col-md-1 col-lg-1 d-md-block bg-dark sidebar-collapse collapse pjecz-bg-dark">
                {% call navigation.menu_colapsado(usuario_email=current_user.email) %}
                    {{ navigation.menu_colapsado_option('Inicio', '/', 'mdi:view-dashboard') }}
                    {# Menú de Favoritos #}
                    {{ navigation.menu_colapsado_option('Favoritos', url_for("modulos_favoritos.list_active"), 'mdi:star') }}
                    {% for modulo in current_user.modulos_favoritos_menu_principal %}
                        {{ navigation.menu_colapsado_option(modulo.nombre_corto, modulo.ruta, modulo.icono) }}
                    {% endfor %}
                    <hr>
                    {% for modulo in current_user.modulos_menu_principal %}
                        {{ navigation.menu_colapsado_option(modulo.nombre_corto, modulo.ruta, modulo.icono) }}
                    {% endfor %}
                    {# Botón de colapsar menú #}
                    <hr>
                    <a class="btn btn-sm btn-outline-light p-0" href="{{url_for('usuarios.toggle_menu', tipo_menu=1)}}" type="button" title="Expandir Menú Lateral" style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .25rem; --bs-btn-font-size: .75rem;"><span class="iconify" data-icon="mdi:chevron-double-right" style="font-size: 1em;"></span></a>
                {% endcall %}
            </nav>
            {% else %}
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse pjecz-bg-dark">
                {% call navigation.menu(usuario_email=current_user.email) %}
                    {{ navigation.menu_option('Inicio', '/', 'mdi:view-dashboard') }}
                    {# Menú de Favoritos #}
                    {{ navigation.menu_option('Favoritos', url_for("modulos_favoritos.list_active"), 'mdi:star') }}
                    {% for modulo in current_user.modulos_favoritos_menu_principal %}
                        {{ navigation.menu_option(modulo.nombre_corto, modulo.ruta, modulo.icono) }}
                    {% endfor %}
                    <hr>
                    {% for modulo in current_user.modulos_menu_principal %}
                        {{ navigation.menu_option(modulo.nombre_corto, modulo.ruta, modulo.icono) }}
                    {% endfor %}
                    {# Botón de colapsar menú #}
                    <hr>
                    <a class="btn btn-sm btn-outline-light ms-5 me-5 p-0" href="{{url_for('usuarios.toggle_menu', tipo_menu=0)}}" type="button" title="Colapasar Menú Lateral"><span class="iconify" data-icon="mdi:chevron-double-left" style="font-size: 1.4em; margin-right: 4px;"></span></a>
                {% endcall %}
            </nav>
            {% endif %}
            {% if tipo_menu == 'colapsado' %}
                <main class="col-md-11 col-lg-11 px-md-4 main-expand">
            {% else %}
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            {% endif %}
                {% block topbar_actions %}{% endblock %}
                {{ flash.render() }}
                {# include 'layouts/tasks_progress.jinja2' #}
                {% block content %}{% endblock %}
                {% block content_help %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}

{% block template_javascript %}
    <script>
        $(document).ready(function() { moment.locale('es-mx'); });
    </script>
    {% if session.get('tipo_menu', 'not set') == 'colapsado' %}
    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
    {% endif %}
{% endblock %}
