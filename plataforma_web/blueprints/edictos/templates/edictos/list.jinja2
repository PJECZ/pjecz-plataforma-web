{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Edictos{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option('Buscar', url_for('edictos.search'), 'fas fa-search') }}
    {% if current_user.can_edit('edictos') %}
        {% if estatus == 'A' %}{{ list.topbar_option('Inactivos', url_for('edictos.list_inactive'), 'fas fa-eye-slash') }}{% endif %}
        {% if estatus == 'B' %}{{ list.topbar_option('Activos', url_for('edictos.list_active'), 'fas fa-eye') }}{% endif %}
    {% endif %}
    {% if current_user.can_insert('edictos') %}
        {{ list.topbar_option('Nuevo Edicto', url_for('edictos.new'), 'fas fa-plus') }}
    {% endif %}
{% endblock %}

{% block content %}
    {{ list.page('Edictos') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="edictos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Fechas</th>
                        <th>Edictos</th>
                    </tr>
                </thead>
                <tbody>
                    {% for edicto in edictos %}
                    <tr>
                        <td>{{ edicto.fecha }}</td>
                        <td><a href="{{ url_for('edictos.detail', edicto_id=edicto.id) }}">{{ edicto.descripcion }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('edictos_datatable') }}
{% endblock %}
