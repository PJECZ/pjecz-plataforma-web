{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Edictos{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_insert('edictos') %}
        {% call list.topbar_actions() %}
            {{ list.topbar_actions_option('Nuevo Edicto', url_for('edictos.new')) }}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block content %}
    {{ list.page('Edictos') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="edictos_datatable" class="table">
                <thead>
                    <tr>
                        <th>Fechas</th>
                        <th>Edictos</th>
                    </tr>
                </thead>
                <tbody>
                    {% for edicto in edictos %}
                    <tr>
                        <td>{{ edicto.fecha }}</td>
                        <td><a href="{{ url_for('edictos.detail', edicto_id=edicto.id) }}">{{ edicto.descripcion }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#edictos_datatable').DataTable();
    </script>
{% endblock %}
