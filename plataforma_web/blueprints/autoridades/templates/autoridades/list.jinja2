{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Autoridades{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option_search('Buscar', url_for('autoridades.search')) }}
    {% if current_user.can_edit('autoridades') %}
        {% if estatus == 'A' %}{{ list.topbar_option_list_inactive('Inactivas', url_for('autoridades.list_inactive')) }}{% endif %}
        {% if estatus == 'B' %}{{ list.topbar_option_list_active('Activas', url_for('autoridades.list_active')) }}{% endif %}
    {% endif %}
    {% if current_user.can_insert('autoridades') %}
        {{ list.topbar_option_new('Nueva Autoridad', url_for('autoridades.new')) }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if estatus == 'A' %}{{ list.page('Autoridades') }}{% endif %}
    {% if estatus == 'B' %}{{ list.page('Autoridades inactivas') }}{% endif %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="autoridades_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Clave</th>
                        <th>Distrito</th>
                        <th>Autoridad</th>
                        <th>Es jurisdiccional</th>
                        <th>Es notar√≠a</th>
                    </tr>
                </thead>
                <tbody>
                    {% for autoridad in autoridades %}
                    <tr>
                        <td><a href="{{ url_for('autoridades.detail', autoridad_id=autoridad.id) }}">{{ autoridad.clave }}</a></td>
                        <td>{{ autoridad.distrito.nombre }}</td>
                        <td>{{ autoridad.descripcion }}</td>
                        <td>{% if autoridad.es_jurisdiccional %}SI{% endif %}</td>
                        <td>{% if autoridad.es_notaria %}SI{% endif %}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('autoridades_datatable') }}
{% endblock %}
