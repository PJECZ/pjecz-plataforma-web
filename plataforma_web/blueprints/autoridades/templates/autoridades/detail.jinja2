{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail with context %}

{% block title %}Autoridad{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_edit('autoridades') %}
        {{ detail.topbar_option_edit('Editar', url_for('autoridades.edit', autoridad_id=autoridad.id)) }}
        {% if autoridad.estatus == 'A' %}{{ detail.topbar_option_delete('Eliminar', 'javascript:showModalDelete()') }}{% endif %}
        {% if autoridad.estatus == 'B' %}{{ detail.topbar_option_recover('Recuperar', 'javascript:showModalRecover()') }}{% endif %}
    {% endif %}
{% endblock %}

{% block content %}
    {% call detail.page_breadcrumb(autoridad.descripcion) %}
        {% if autoridad.estatus == 'A' %}{{ detail.page_breadcrumb_item('Autoridades', link=url_for('autoridades.list_active')) }}{% endif %}
        {% if autoridad.estatus == 'B' %}{{ detail.page_breadcrumb_item('Autoridades inactivas', link=url_for('autoridades.list_inactive')) }}{% endif %}
    {% endcall %}
    <div class="container-fluid">
        {% call detail.card(estatus=autoridad.estatus) %}
            {{ detail.label_value_big('Autoridad', autoridad.descripcion) }}
            {{ detail.label_value('Distrito', autoridad.distrito.nombre, url_for('distritos.detail', distrito_id=autoridad.distrito_id)) }}
            {{ detail.label_value('Clave', autoridad.clave) }}
            {{ detail.label_value_boolean('Es jurisdiccional', autoridad.es_jurisdiccional) }}
            {{ detail.label_value('Directorio para edictos', autoridad.directorio_edictos) }}
            {{ detail.label_value('Directorio para glosas', autoridad.directorio_glosas) }}
            {{ detail.label_value('Directorio para listas de acuerdos', autoridad.directorio_listas_de_acuerdos) }}
            {{ detail.label_value('Directorio para sentencias', autoridad.directorio_sentencias) }}
        {% endcall %}
        {% call detail.card('Usuarios') %}
            <table id="usuarios_datatable" class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>e-mail</th>
                        <th>Rol</th>
                        <th>Workspace</th>
                    </tr>
                </thead>
                <tbody>
                    {% for usuario in usuarios %}
                    <tr>
                        <td><a href="{{ url_for('usuarios.detail', usuario_id=usuario.id) }}">{{ usuario.nombre }}</a></td>
                        <td>{{ usuario.email }}</td>
                        <td>{{ usuario.rol.nombre }}</td>
                        <td>{{ usuario.workspace }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
    {% if current_user.can_edit('autoridades') %}
        {{ detail.modal('Eliminar', '¿Eliminar a ' + autoridad.descripcion + '?', 'modalDelete', url_for('autoridades.delete', autoridad_id=autoridad.id)) }}
        {{ detail.modal('Recuperar', '¿Recuperar a ' + autoridad.descripcion + '?', 'modalRecover', url_for('autoridades.recover', autoridad_id=autoridad.id)) }}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {{ detail.datatable('usuarios_datatable') }}
    {% if current_user.can_edit('autoridades') %}
        {{ detail.custom_javascript_delete_recover() }}
    {% endif %}
{% endblock %}
