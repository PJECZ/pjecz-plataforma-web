{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Nueva Autoridad{% endblock %}

{% block content %}
    {{ f.page('Nueva Autoridad') }}
    <div class="container-fluid">
        {% call f.card() %}
            {% call f.form_tag('autoridades.new', fid='autoridad_form') %}
                {% call f.form_group(form.distrito) %}{% endcall %}
                {% call f.form_group(form.descripcion) %}{% endcall %}
                {% call f.form_group(form.clave) %}{% endcall %}
                {% call f.form_group(form.es_jurisdiccional) %}{% endcall %}
                {% call f.form_group(form.es_juzgado_primera_instancia) %}{% endcall %}
                {% call f.form_group(form.es_pleno_sala) %}{% endcall %}
                {% call f.form_group(form.es_notaria) %}{% endcall %}
                {% call f.form_group(form.guardar) %}{% endcall %}
            {% endcall %}
        {% endcall %}
    </div>
{% endblock %}
