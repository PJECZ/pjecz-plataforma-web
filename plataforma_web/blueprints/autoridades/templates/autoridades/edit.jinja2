{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Editar Autoridad{% endblock %}

{% block content %}
    {{ f.page_breadcrumb('Editar ' + autoridad.descripcion) }}
    <div class="container-fluid">
        {% set form_kwargs = {'autoridad_id': autoridad.id} %}
        {% call f.form_tag('autoridades.edit', fid='autoridad_form', **form_kwargs) %}
            {% call f.form_group(form.distrito) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.email) %}{% endcall %}
            {{ form.guardar() }}
        {% endcall %}
    </div>
{% endblock %}
