{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Editar Autoridad{% endblock %}

{% block content %}
    {{ f.page('Editar ' + autoridad.descripcion) }}
    <div class="container-fluid">
        {% call f.card() %}
            {% set form_kwargs = {'autoridad_id': autoridad.id} %}
            {% call f.form_tag('autoridades.edit', fid='autoridad_form', **form_kwargs) %}
                {% call f.form_group(form.distrito) %}{% endcall %}
                {% call f.form_group(form.descripcion) %}{% endcall %}
                {% call f.form_group(form.clave) %}{% endcall %}
                {% call f.form_group(form.es_jurisdiccional) %}{% endcall %}
                {% call f.form_group(form.es_notaria) %}{% endcall %}
                {% call f.form_group(form.directorio_edictos) %}{% endcall %}
                {% call f.form_group(form.directorio_glosas) %}{% endcall %}
                {% call f.form_group(form.directorio_listas_de_acuerdos) %}{% endcall %}
                {% call f.form_group(form.directorio_sentencias) %}{% endcall %}
                {{ form.guardar() }}
            {% endcall %}
        {% endcall %}
    </div>
{% endblock %}
