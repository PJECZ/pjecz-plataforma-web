{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Escritura{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(escritura.expediente) %}
        {{ topbar.button_previous('Escrituras', url_for('escrituras.list_active')) }}
        {% if current_user.can_admin('ESCRITURAS') %}
            {{ topbar.button_edit('Editar', url_for('escrituras.edit', escritura_id=escritura.id)) }}
        {% endif %}
        {% if current_user.can_admin('ESCRITURAS') or (current_user.can_edit('ESCRITURAS') and escritura.autoridad_id == current_user.autoridad_id) %}
            {% if escritura.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('escrituras.delete', escritura_id=escritura.id)) }}{% endif %}
            {% if escritura.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('escrituras.recover', escritura_id=escritura.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=escritura.estatus) %}
        {{ detail.label_value('Fecha de envío', escritura.envio_fecha) }}
        {{ detail.label_value('Distrito', escritura.autoridad.distrito.nombre) }}
        {{ detail.label_value('Notaría', escritura.autoridad.descripcion) }}
        {{ detail.label_value('Expediente', escritura.expediente) }}
        {{ detail.label_value('Tipo de procedimiento', escritura.tipo) }}
        {{ detail.label_value('Texto de la escritura', escritura.texto) }}
        {{ detail.label_value('Observaciones', escritura.observaciones) }}
        {{ detail.label_value('Etapa', escritura.etapa) }}
        {{ detail.label_value('Fecha de aprobación', escritura.aprobacion_fecha) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_admin('ESCRITURAS') or (current_user.can_edit('ESCRITURAS') and escritura.autoridad_id == current_user.autoridad_id) %}
        {% if escritura.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + escritura.expediente + '?') }}{% endif %}
        {% if escritura.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + escritura.expediente + '?') }}{% endif %}
    {% endif %}
{% endblock %}
