{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Equipos{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        
        {% if current_user.can_edit('INV EQUIPOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('inv_equipos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('inv_equipos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('INV EQUIPOS') %}
            {# {{ topbar.button_new('Nuevo Equipo', url_for('inv_equipos.new')) }} #}
            {{ topbar.button_primary('Marcas', url_for('inv_marcas.list_active'), 'mdi:chart-bubble') }}
            {{ topbar.button_primary('Redes', url_for('inv_redes.list_active'), 'mdi:access-point-network') }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="inv_equipos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Inventario</th>
                    <th>No. Serie</th>
                    <th>Adquisicion Fecha</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Descripción</th>
                    <th>Custodio</th> 
                </tr>
            </thead>
            
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
   <script>
        $('#inv_equipos_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: false,
            searching: false,
            responsive: true,
            scrollX: true,
            ajax: {
                url: "/inv_equipos/datatable_json",
                type: "POST",
                headers: {'X-CSRF-TOKEN': "{{ csrf_token() }}"},
                dataType: "json",
                dataSrc: "data",
                data: {{ filtros }}
            },
            columns: [
                { data: "numero_inventario" },
                { data: "numero_serie" },
                { data: "adquisicion_fecha" },
                { data: "marca" },
                { data: "modelo" },
                { data: "descripcion" },
                { data: "custodia" },
            ],
            columnDefs: [
                {
                    targets: 0,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.descripcion + '</a>';
                    }
                },
               {
                    targets: [3,4],
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.nombre + '</a>';
                    }
                },
                {
                    targets: 6,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.nombre_completo + '</a>';
                    }
                },
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>

{% endblock %}
