{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nuevo Equipos{% endblock %}

{% block custom_head %}
    <!-- Select2 bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}
   
{% block topbar_actions %}
    {{ topbar.page('Nuevo Equipo ') }}
{% endblock %}


{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'inv_custodia_id': custodia.id} %} 
        {% call f.form_tag('inv_equipos.new', fid='equipo_form', **form_kwargs) %}
            {% call f.form_group(form.custodia, readonly=true) %}{% endcall %}
            {% call f.form_group(form.email, readonly=true) %}{% endcall %}
            {% call f.form_group(form.oficina, readonly=true) %}{% endcall %}
            {% call f.form_group(form.puesto, readonly=true) %}{% endcall %}
            {% call f.form_group(form.modelo) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.adquisicion_fecha) %}{% endcall %}
            {% call f.form_group(form.numero_serie) %}{% endcall %}
            {% call f.form_group(form.numero_inventario) %}{% endcall %}
            {% call f.form_group(form.red) %}{% endcall %}
            {% call f.form_group(form.direccion_ip) %}{% endcall %}
            {% call f.form_group(form.direccion_mac) %}{% endcall %}
            {% call f.form_group(form.numero_nodo) %}{% endcall %}
            {% call f.form_group(form.numero_switch) %}{% endcall %}
            {% call f.form_group(form.numero_puerto) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <!-- Select2 bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#red').addClass('js-example-placeholder-single js-states form-control');
            $('#modelo').addClass('js-example-placeholder-single js-states form-control');
            
            $('#modelo').each(function(){
                if('{{form.modelo}}' == 'None'){
                    $("#modelo").prop("selectedIndex", -1); // Poner en blanco el select
                }
                if($(this).text() == '{{form.modelo}}'){
                    $('#modelo').val( $(this).val() );
                }
            });
            $('#red').each(function() {
                if('{{form.red}}' == 'None'){
                    $("#red").prop("selectedIndex", -1); // Poner en blanco el select
                }
                if($(this).text() == '{{form.red}}') {
                    $("#red").val( $(this).val() );
                }
            });
            
            $(".js-example-placeholder-single").select2({
                placeholder: "Selecciona campo",
                allowClear: true
            });
        });
    </script>
{% endblock%}