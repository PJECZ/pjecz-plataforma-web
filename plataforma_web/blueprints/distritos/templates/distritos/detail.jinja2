{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Departamento{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(distrito.nombre) %}
        {{ topbar.button_previous('Registros', url_for('distritos.list_active')) }}
        {% if current_user.can_edit('distritos') %}
            {{ topbar.button_edit('Editar', url_for('distritos.edit', distrito_id=distrito.id)) }}
            {% if distrito.estatus == 'A' %}{{ topbar.button_delete('Eliminar', 'javascript:showModalDelete()') }}{% endif %}
            {% if distrito.estatus == 'B' %}{{ topbar.button_recover('Recuperar', 'javascript:showModalRecover()') }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=distrito.estatus) %}
        {# detail.label_value_big('Nombre', distrito.nombre) #}
        {{ detail.label_value('Nombre corto', distrito.nombre_corto) }}
        {{ detail.label_value_boolean('Es distrito judicial', distrito.es_distrito_judicial) }}
    {% endcall %}
    {% if autoridades %}
        {% call detail.card(title='Autoridades') %}
            <table id="autoridades_datatable" class="table">
                <thead>
                    <tr>
                        <th>Claves</th>
                        <th>Descripciones</th>
                        <th>Es Jurisdiccional</th>
                        <th>Es Notaría</th>
                    </tr>
                </thead>
                <tbody>
                    {% for autoridad in autoridades %}
                    <tr>
                        <td><a href="{{ url_for('autoridades.detail', autoridad_id=autoridad.id) }}">{{ autoridad.clave }}</a></td>
                        <td>{{ autoridad.descripcion }}</td>
                        <td>{% if autoridad.es_jurisdiccional %}Jurisdiccional{% endif %}</td>
                        <td>{% if autoridad.es_notaria %}Notaría{% endif %}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    {% endif %}
    {% if current_user.can_edit('distritos') %}
        {{ detail.modal('Eliminar', '¿Eliminar a ' + distrito.nombre + '?', 'modalDelete', url_for('distritos.delete', distrito_id=distrito.id)) }}
        {{ detail.modal('Recuperar', '¿Recuperar a ' + distrito.nombre + '?', 'modalRecover', url_for('distritos.recover', distrito_id=distrito.id)) }}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {{ detail.datatable('autoridades_datatable') }}
    {% if current_user.can_edit('distritos') %}
        {{ detail.custom_javascript_delete_recover() }}
    {% endif %}
{% endblock %}
