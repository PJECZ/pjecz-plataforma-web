{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Distritos{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_insert('distritos') %}
        {% call list.topbar_actions() %}
            {{ list.topbar_actions_option('Nuevo Distrito', url_for('distritos.new')) }}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block content %}
    {{ list.page_breadcrumb('Distritos') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="distritos_datatable" class="table">
                <thead>
                    <tr>
                        <th>Distritos</th>
                    </tr>
                </thead>
                <tbody>
                    {% for distrito in distritos %}
                    <tr>
                        <td><a href="{{ url_for('distritos.detail', distrito_id=distrito.id) }}">{{ distrito.nombre }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#distritos_datatable').DataTable();
    </script>
{% endblock %}
