{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Componente{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar ' + inv_componente.descripcion) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'inv_componente_id': inv_componente.id} %}
        {% call f.form_tag('inv_componentes.edit', fid='inv_componente_id_form', **form_kwargs) %}
            {% call f.form_group(form.inv_equipo, readonly=true) %}{% endcall %}
            {% call f.form_group(form.inv_marca, readonly=true) %}{% endcall %}
            {% call f.form_group(form.descripcion_equipo, readonly=true) %}{% endcall %}
            {% call f.form_group(form.usuario, readonly=true) %}{% endcall %}
            {% call f.form_group(form.nombre) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.cantidad) %}{% endcall %}
            {% call f.form_group(form.version) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}