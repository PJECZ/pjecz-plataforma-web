{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Usuarios{% endblock %}

{% block topbar_actions %}
    {% call list.topbar_actions() %}
        {% if current_user.can_edit('usuarios') %}
            {% if estatus == 'A' %}{{ list.topbar_actions_option('Inactivos', url_for('usuarios.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ list.topbar_actions_option('Activos', url_for('usuarios.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('usuarios') %}
            {{ list.topbar_actions_option('Nuevo Usuario', url_for('usuarios.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {{ list.page('Usuarios') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="usuarios_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>e-mail</th>
                        <th>Clave</th>
                        <th>Rol</th>
                        <th>Workspace</th>
                    </tr>
                </thead>
                <tbody>
                    {% for usuario in usuarios %}
                    <tr>
                        <td><a href="{{ url_for('usuarios.detail', usuario_id=usuario.id) }}">{{ usuario.nombre }}</a></td>
                        <td>{{ usuario.email }}</td>
                        <td>{{ usuario.autoridad.clave }}</td>
                        <td>{{ usuario.rol.nombre }}</td>
                        <td>{{ usuario.workspace }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('usuarios_datatable') }}
{% endblock %}
