{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Usuarios{% endblock %}

{% block topbar_actions %}
    {% if estatus == 'A' %}{% set title='Usuarios' %}{% endif %}
    {% if estatus == 'B' %}{% set title='Usuarios inactivos' %}{% endif %}
    {% call topbar.page_buttons(title) %}
        {{ topbar.button('Roles', url_for('roles.list_active'), 'mdi mdi-gamepad') }}
        {{ topbar.button('Entradas/Salidas', url_for('entradas_salidas.list_active'), 'mdi mdi-calendar-clock') }}
        {% if current_user.can_edit('usuarios') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('usuarios.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('usuarios.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('usuarios') %}
            {{ topbar.button_new('Nuevo Usuario', url_for('usuarios.new')) }}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('usuarios.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="usuarios_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>e-mail</th>
                    <th>Autoridad</th>
                    {% if current_user.can_edit('usuarios') %}<th>Rol</th>
                    <th>Workspace</th>{% endif %}
                </tr>
            </thead>
            <tbody>
                {% for usuario in usuarios %}
                <tr>
                    <td><a href="{{ url_for('usuarios.detail', usuario_id=usuario.id) }}">{{ usuario.nombre }}</a></td>
                    <td>{{ usuario.email }}</td>
                    <td>{{ usuario.autoridad.clave }}</td>
                    {% if current_user.can_edit('usuarios') %}<td>{{ usuario.rol.nombre }}</td>
                    <td>{{ usuario.workspace }}</td>{% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('usuarios_datatable') }}
{% endblock %}
