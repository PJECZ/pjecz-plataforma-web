{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Usuarios{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('MODULOS') %}
            {{ topbar.button('Módulos', url_for('modulos.list_active'), 'mdi:toy-brick') }}
        {% endif %}
        {% if current_user.can_view('ROLES') %}
            {{ topbar.button('Roles', url_for('roles.list_active'), 'mdi:gamepad') }}
        {% endif %}
        {% if current_user.can_edit('USUARIOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('usuarios.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('usuarios.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('USUARIOS') %}
            {{ topbar.button_new('Nuevo Usuario', url_for('usuarios.new')) }}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('usuarios.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
    <!-- Formulario de filtros -->
        <div class="row">
            <div class="col">
                <form class="row g-1 mb-3" id="buscadorForm" onsubmit="buscar(); return false;">
                    <div class="col-5">
                        <div class="form-floating">
                            <input id="emailInput" type="text" class="form-control" aria-label="email" onchange="buscar(); return false;" style="text-transform: lowercase;">
                            <label for="emailInput">email</label>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-floating">
                            <input id="nombre_completoInput" type="text" class="form-control" aria-label="email" onchange="buscar(); return false;" style="text-transform: uppercase;">
                            <label for="nombre_completoInput">Nombre Completo</label>
                        </div>
                    </div>
                    <div class="col-2 text-end">
                        <button title="Buscar" class="btn btn-primary btn-lg" onclick="buscar(); return false;" id="button-buscar"><span class="iconify" data-icon="mdi:magnify"></span></button>
                        <button title="Limpiar" class="btn btn-warning btn-lg" type="reset" onclick="limpiar();" id="button-limpiar"><span class="iconify" data-icon="mdi:broom"></span></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Datatable de Usuarios -->
        <table id="usuarios_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>e-mail</th>
                    <th>Nombres Completos</th>
                    <th>Puesto</th>
                    <th>Autoridad</th>
                    <th>Oficina</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.config_datatable() }}
    <script>
        configDataTable['ajax']['url'] = '/usuarios/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: "detalle" },
            { data: "nombre" },
            { data: "puesto" },
            { data: "autoridad" },
            { data: "oficina" }
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.email + '</a>';
                }
            },
            {
                targets: [1, 2], // nombre, puesto
                data: null,
                render: function(data, type, row, meta) {
                    return (data.length > 32 ? data.substr(0, 32) + '…' : data);
                }
            },
            {
                targets: 3, // autoridad
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url == '') {
                        return data.clave;
                    } else {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                }
            },
            {
                targets: 4, // oficina
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url == '') {
                        return data.clave;
                    } else {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                }
            }
        ];
        // Búsqueda
        let email = document.getElementById('emailInput').value.toLowerCase();
        let nombre_completo = document.getElementById('nombre_completoInput').value.toUpperCase();

        if(email != '')
            configDataTable['ajax']['data']['email'] = email;
        if(nombre_completo != '')
            configDataTable['ajax']['data']['nombre_completo'] = nombre_completo;
        
        // Datatable
        $('#usuarios_datatable').DataTable(configDataTable);
    </script>
    <!-- Función de buscador -->
    <script type="text/javascript">
        function buscar() {
            let email = document.getElementById('emailInput').value.toLowerCase();
            let nombre_completo = document.getElementById('nombre_completoInput').value.toUpperCase();

            if( configDataTable['ajax']['data']['email'] === undefined && email === '' &&
                configDataTable['ajax']['data']['nombre_completo'] === undefined && nombre_completo === ''
            ) return false;

            $('#usuarios_datatable').DataTable().destroy();

            if(email == '')
                delete configDataTable['ajax']['data']['email'];
            else
                configDataTable['ajax']['data']['email'] = email;
            if(nombre_completo == '')
                delete configDataTable['ajax']['data']['nombre_completo'];
            else
                configDataTable['ajax']['data']['nombre_completo'] = nombre_completo;

            $('#usuarios_datatable').DataTable(configDataTable);
        };

        function limpiar()  {
            if( configDataTable['ajax']['data']['email'] === undefined &&
                configDataTable['ajax']['data']['nombre_completo'] === undefined
            ) return false;
            
            delete configDataTable['ajax']['data']['email'];
            delete configDataTable['ajax']['data']['nombre_completo'];

            $('#usuarios_datatable').DataTable().destroy();
            $('#usuarios_datatable').DataTable(configDataTable);
        };
    </script>
{% endblock %}
