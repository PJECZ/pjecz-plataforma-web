{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Usuario{% endblock %}

{% block custom_head %}
    <!-- Select2 bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">
{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar usuario ' + usuario.email) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'usuario_id': usuario.id} %}
        {% call f.form_tag('usuarios.edit', fid='usuario_form', **form_kwargs) %}
            {% call f.form_group(form.distrito, readonly=true) %}{% endcall %}
            {% call f.form_group(form.autoridad, readonly=true) %}{% endcall %}
            {% call f.form_group(form.oficina) %}{% endcall %}
            {% call f.form_group(form.nombres) %}{% endcall %}
            {% call f.form_group(form.apellido_paterno) %}{% endcall %}
            {% call f.form_group(form.apellido_materno) %}{% endcall %}
            {% call f.form_group(form.curp) %}{% endcall %}
            {% call f.form_group(form.puesto) %}{% endcall %}
            {% call f.form_group(form.email, readonly=true) %}{% endcall %}
            {% call f.form_group(form.workspace, readonly=true) %}{% endcall %}
            {% call f.form_group(form.efirma_registro_id) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <!-- Select2 bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <!-- Select2 bootstrap oficinas -->
    <script>
        $(document).ready(function(){
            $('#oficina').addClass('js-example-placeholder-single js-states form-control');
            $("#oficina").prop("selectedIndex", -1);
            $('#oficina option').each(function() {
                if($(this).text() == '{{usuario.oficina.clave_nombre}}') {
                    $("#oficina").val( $(this).val() );
                }
            });
            $(".js-example-placeholder-single").select2({
                placeholder: "Oficina",
                allowClear: true
            });
        });
    </script>
{% endblock %}
