{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail with context %}

{% block title %}Usuario{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_edit('usuarios') %}
        {{ detail.topbar_option_edit('Editar', url_for('usuarios.edit', usuario_id=usuario.id)) }}
        {% if usuario.estatus == 'A' %}{{ detail.topbar_option_delete('Eliminar', 'javascript:showModalDelete()') }}{% endif %}
        {% if usuario.estatus == 'B' %}{{ detail.topbar_option_recover('Recuperar', 'javascript:showModalRecover()') }}{% endif %}
    {% endif %}
{% endblock %}

{% block content %}
    {% call detail.page_breadcrumb(usuario.nombre) %}
        {% if usuario.estatus == 'A' %}{{ detail.page_breadcrumb_item('Usuarios', link=url_for('usuarios.list_active')) }}{% endif %}
        {% if usuario.estatus == 'B' %}{{ detail.page_breadcrumb_item('Usuarios inactivos', link=url_for('usuarios.list_inactive')) }}{% endif %}
    {% endcall %}
    <div class="container-fluid">
        {% call detail.card('', usuario.estatus) %}
            {{ detail.label_value_big('Nombre', usuario.nombre) }}
            {{ detail.label_value('Distrito', usuario.autoridad.distrito.nombre, url_for('distritos.detail', distrito_id=usuario.autoridad.distrito_id)) }}
            {{ detail.label_value('Autoridad', usuario.autoridad.descripcion, url_for('autoridades.detail', autoridad_id=usuario.autoridad_id)) }}
            {{ detail.label_value('e-mail', usuario.email) }}
            {% if current_user.can_edit('usuarios') %}
                {{ detail.label_value('Workspace', usuario.workspace) }}
                {{ detail.label_value('Rol', usuario.rol.nombre) }}
            {% endif %}
        {% endcall %}
    </div>
    {% if current_user.can_edit('usuarios') %}
        {{ detail.modal('Eliminar', '¿Eliminar a ' + usuario.nombre + '?', 'modalDelete', url_for('usuarios.delete', usuario_id=usuario.id)) }}
        {{ detail.modal('Recuperar', '¿Recuperar a ' + usuario.nombre + '?', 'modalRecover', url_for('usuarios.recover', usuario_id=usuario.id)) }}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('usuarios') %}
        {{ detail.custom_javascript_delete_recover() }}
    {% endif %}
{% endblock %}
