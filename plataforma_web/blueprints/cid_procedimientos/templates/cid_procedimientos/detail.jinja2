{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}
{% import 'macros/vista-previa.jinja2' as previa %}

{% block title %}Procedimiento{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Procedimiento') %}
        {{ topbar.button_previous('Procedimientos', url_for('cid_procedimientos.list_active')) }}
        {% if current_user.can_edit('cid_procedimientos') %}
            {{ topbar.button_edit('Editar', url_for('cid_procedimientos.edit', cid_procedimiento_id=cid_procedimiento.id)) }}
            {% if cid_procedimiento.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('cid_procedimientos.delete', cid_procedimiento_id=cid_procedimiento.id)) }}{% endif %}
            {% if cid_procedimiento.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('cid_procedimientos.recover', cid_procedimiento_id=cid_procedimiento.id)) }}{% endif %}
            {{ topbar.button_make('Firmar', url_for('cid_procedimientos.sign_for_maker', cid_procedimiento_id=cid_procedimiento.id)) }}
        {% endif %}
        {% if current_user.can_insert('cid_formatos') %}
            {{ topbar.button_new('Agregar formato', url_for('cid_formatos.new', cid_procedimiento_id=cid_procedimiento.id)) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=cid_procedimiento.estatus) %}
        <div class="accordion accordion-flush" id="accordionViewP">
            {{ previa.vista_previa_items('titulo', 'Título', cid_procedimiento.titulo_procedimiento) }}
            {{ previa.vista_previa_items('codigo', 'Código', cid_procedimiento.codigo) }}
            {{ previa.vista_previa_items('revision', 'Revisión', cid_procedimiento.revision) }}
            {{ previa.vista_previa_items('fecha', 'Fecha', cid_procedimiento.fecha) }}
            {{ previa.vista_previa_items('seguimiento', 'Seguimiento', cid_procedimiento.seguimiento) }}
            {{ previa.vista_previa_items('seguimiento_posterior', 'Seguimiento posterior', cid_procedimiento.seguimiento_posterior) }}
            {{ previa.vista_previa_items('usuario', 'Usuario', cid_procedimiento.usuario.nombre) }}
            {##}
            {{ previa.vista_previa_items('firma', 'Firma guardada', cid_procedimiento.firma) }}
            {{ previa.vista_previa_items('firma_vuelo', 'Firma al vuelo', firma_al_vuelo) }}
            {##} {# Comnieza acordeon #}
            {{ detail.label_value_new_tab('Archivo PDF', cid_procedimiento.archivo, cid_procedimiento.url) }}
            {##}{# Comnieza acordeon #}
            {{ previa.vista_previa_items('objetivos', 'Objetivo', objetivo)}}
            {{ previa.vista_previa_items('alcance', 'Alcance', alcance)}}
            {{ previa.vista_previa_items('documentos', 'Documentos', documentos)}}
            {{ previa.vista_previa_items('definiciones', 'Definiciones', definiciones)}}
            {{ previa.vista_previa_items('responsabilidades', 'Responsabilidades', responsabilidades)}}
            {{ previa.vista_previa_items('desarrollo', 'Desarrollo', desarrollo)}}
            {{ previa.vista_previa_items('registro', 'Registros', registros)}}
            {{ previa.vista_previa_items('control_cambios', 'Control de Cambios', control_cambios) }}
            {{ previa.vista_previa_items('elaboro_nombre', 'Elaboró nombre', cid_procedimiento.elaboro_nombre) }}
            {{ previa.vista_previa_items('elaboro_puesto', 'Elaboró puesto', cid_procedimiento.elaboro_puesto) }}
            {{ previa.vista_previa_items('elaboro_email', 'Elaboró correo', cid_procedimiento.elaboro_email) }}
            {{ previa.vista_previa_items('reviso_nombre', 'Revisó nombre', cid_procedimiento.reviso_nombre) }}
            {{ previa.vista_previa_items('reviso_puesto', 'Revisó puesto', cid_procedimiento.reviso_puesto) }}
            {{ previa.vista_previa_items('reviso_email', 'Revisó correo', cid_procedimiento.reviso_email) }}
            {{ previa.vista_previa_items('aprobo_nombre', 'Autorizó nombre', cid_procedimiento.aprobo_nombre) }}
            {{ previa.vista_previa_items('aprobo_puesto', 'Autorizó puesto', cid_procedimiento.aprobo_puesto) }}
            {{ previa.vista_previa_items('aprobo_email', 'Autorizó correo', cid_procedimiento.aprobo_email) }}
        </div>  
    {% endcall %}
    {% if cid_formatos %}
        {% call detail.card(title='Formatos') %}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('cid_procedimientos') %}
        {% if cid_procedimiento.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + cid_procedimiento.titulo_procedimiento + '?') }}{% endif %}
        {% if cid_procedimiento.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + cid_procedimiento.titulo_procedimiento + '?') }}{% endif %}
        {{ modals.custom_javascript_make('Firmar', '¿Está seguro de que quiere firmarlo? Ya no podrá cambiarlo después.') }}
    {% endif %}
{% endblock %}
