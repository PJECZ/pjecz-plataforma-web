{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail with context %}

{% block title %}Registro{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_edit('cid_registros') %}
        {{ detail.topbar_option('Editar', url_for('cid_registros.edit', cid_registro_id=cid_registro.id), 'fas fa-edit') }}
        {% if cid_registro.estatus == 'A' %}{{ detail.topbar_option('Eliminar', 'javascript:showModalDelete()', 'fas fa-trash') }}{% endif %}
        {% if cid_registro.estatus == 'B' %}{{ detail.topbar_option('Recuperar', 'javascript:showModalRecover()', 'fas fa-recycle') }}{% endif %}
    {% endif %}
{% endblock %}

{% block content %}
    {% call detail.page_breadcrumb(cid_registro.id) %}
        {% if cid_registro.estatus == 'A' %}{{ detail.page_breadcrumb_item('Registros', link=url_for('cid_registros.list_active')) }}{% endif %}
        {% if cid_registro.estatus == 'B' %}{{ detail.page_breadcrumb_item('Registros inactivos', link=url_for('cid_registros.list_inactive')) }}{% endif %}
    {% endcall %}
    <div class="container-fluid">
        {% call detail.card(estatus=cid_registro.estatus) %}
            {{ detail.label_value_big('Registro', cid_registro.descripcion) }}
            {{ detail.label_value('Fecha', cid_registro.creado.strftime('%Y-%m-%d %H:%M')) }}
            {{ detail.label_value('Formato', cid_registro.formato.descripcion, url_for('cid_formatos.detail', cid_formato_id=cid_registro.formato_id)) }}
        {% endcall %}
    </div>
    {% if current_user.can_edit('cid_registros') %}
        {{ detail.modal('Eliminar', '¿Eliminar a ' + cid_registro.descripcion + '?', 'modalDelete', url_for('cid_registros.delete', cid_registro_id=cid_registro.id)) }}
        {{ detail.modal('Recuperar', '¿Recuperar a ' + cid_registro.descripcion + '?', 'modalRecover', url_for('cid_registros.recover', cid_registro_id=cid_registro.id)) }}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('cid_registros') %}
        {{ detail.custom_javascript_delete_recover() }}
    {% endif %}
{% endblock %}
