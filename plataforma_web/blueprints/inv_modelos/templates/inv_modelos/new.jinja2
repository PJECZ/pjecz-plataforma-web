{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nuevo Modelo{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nuevo Modelo') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'inv_marca_id': inv_marca.id} %}
        {% call f.form_tag('inv_modelos.new', fid='inv_modelo_form', **form_kwargs) %}
            {% call f.form_group(form.nombre, readonly=true) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
