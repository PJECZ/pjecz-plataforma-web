{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}REPSVM Tipos de Sentencias{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(repsvm_tipo_sentencia.nombre) %}
        {{ topbar.button_previous('Tipos de Sentencias', url_for('repsvm_tipos_sentencias.list_active')) }}
        {% if current_user.can_edit('REPSVM TIPOS SENTENCIAS') %}
            {{ topbar.button_edit('Editar', url_for('repsvm_tipos_sentencias.edit', repsvm_tipo_sentencia_id=repsvm_tipo_sentencia.id)) }}
            {% if repsvm_tipo_sentencia.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('repsvm_tipos_sentencias.delete', repsvm_tipo_sentencia_id=repsvm_tipo_sentencia.id)) }}{% endif %}
            {% if repsvm_tipo_sentencia.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('repsvm_tipos_sentencias.recover', repsvm_tipo_sentencia_id=repsvm_tipo_sentencia.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=repsvm_tipo_sentencia.estatus) %}
        {{ detail.label_value_big('Nombre', repsvm_tipo_sentencia.nombre) }}
    {% endcall %}
    {% if current_user.can_view('REPSVM AGRESORES') %}
        {% call detail.card('Agresores') %}
            <table id="repsvm_agresores_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>IDs</th>
                        <th>Distritos</th>
                        <th>T. Juzgados</th>
                        <th>Delitos Específicos</th>
                        <th>Nombres</th>
                        <th>No. Causa</th>
                        <th>Penas Impuestas</th>
                        <th>URL</th>
                    </tr>
                </thead>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('REPSVM TIPOS SENTENCIAS') %}
        {% if repsvm_tipo_sentencia.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + repsvm_tipo_sentencia.nombre + '?') }}{% endif %}
        {% if repsvm_tipo_sentencia.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + repsvm_tipo_sentencia.nombre + '?') }}{% endif %}
    {% endif %}
    {{ detail.config_datatable() }}
    {% if current_user.can_view('REPSVM AGRESORES') %}
        <script>
            configDataTable['ajax']['url'] = '/repsvm_agresores/datatable_json';
            configDataTable['ajax']['data'] = { 'estatus': "A", 'repsvm_tipo_sentencia_id': {{ repsvm_tipo_sentencia.id}} };
            configDataTable['columns'] = [
                { data: "detalle" },
                { data: "distrito" },
                { data: "materia_tipo_juzgado" },
                { data: "repsvm_delito_especifico" },
                { data: "nombre" },
                { data: "numero_causa" },
                { data: "pena_impuesta" },
                { data: "sentencia_url" }
            ];
            configDataTable['columnDefs'] = [
                {
                    targets: 0, // ID
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.id + '</a>';
                    }
                },
                {
                    targets: 1, // Distrito
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.url != '') {
                            return '<a href="' + data.url + '">' + data.nombre_corto + '</a>';
                        }
                        return data.nombre_corto;
                    }
                },
                {
                    targets: 2, // Materia Tipo Juzgado
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.url != '') {
                            return '<a href="' + data.url + '">' + data.clave + '</a>';
                        }
                        return data.clave;
                    }
                },
                {
                    targets: 3, // Delito Especifico
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.descripcion.length > 16)
                            texto = '<span title="' + data.descripcion + '">' + data.descripcion.substr(0, 16) + '…' + '</span>';
                        else
                            texto = data.descripcion;
                        if (data.url != '') {
                            return '<a href="' + data.url + '">' + texto + '</a>';
                        }
                        return texto;
                    }
                },
                {
                    targets: 4, // Nombre
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.length > 48)
                            return '<span title="' + data + '">' + data.substr(0, 48) + '…' + '</span>';
                        else
                            return data;
                    }
                },
                {
                    targets: [5, 6], // No. Causa y Pena
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.length > 16)
                            return '<span title="' + data + '">' + data.substr(0, 16) + '…' + '</span>';
                        else
                            return data;
                    }
                },
                {
                    targets: 7, // Sentencia URL
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data != '') {
                            return '<a href="' + data + '" target="_blank"><span class="iconify" data-icon="mdi:file-download"></span></a>';
                        }
                        return '';
                    }
                }
            ];
            $('#repsvm_agresores_datatable').DataTable(configDataTable);
        </script>
    {% endif %}
{% endblock %}
