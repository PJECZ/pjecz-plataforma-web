{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}{{ titulo }}{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_edit('REQ CATALOGOS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivas', url_for('req_catalogos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activas', url_for('req_catalogos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('REQ CATALOGOS') %}
            {{ topbar.button_new('Nuevo articulo', url_for('req_catalogos.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="req_catalogos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Clave</th>
                    <th>Categoría</th>
                    <th>Descripción</th>
                    <th>Unidad de medida</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.config_datatable() }}
    <script>
        configDataTable['ajax']['url'] = '/req_catalogos/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'detalle' },
            { data: 'categoria' },
            { data: 'descripcion' },
            { data: 'unidad' },
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.codigo + '</a>';
                }
            }
        ];
        $('#req_catalogos_datatable').DataTable(configDataTable);
    </script>
{% endblock %}
