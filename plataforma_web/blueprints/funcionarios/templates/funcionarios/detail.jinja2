{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Funcionario{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Funcionario ' + funcionario.nombre) %}
        {{ topbar.button_previous('Funcionarios', url_for('funcionarios.list_active')) }}
        {% if current_user.can_edit('FUNCIONARIOS') %}
            {{ topbar.button_edit('Editar', url_for('funcionarios.edit', funcionario_id=funcionario.id)) }}
            {% if funcionario.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('funcionarios.delete', funcionario_id=funcionario.id)) }}{% endif %}
            {% if funcionario.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('funcionarios.recover', funcionario_id=funcionario.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=funcionario.estatus) %}
        {{ detail.label_value('Nombres', funcionario.nombres) }}
        {{ detail.label_value('Apellido paterno', funcionario.apellido_paterno) }}
        {{ detail.label_value('Apellido materno', funcionario.apellido_materno) }}
        {{ detail.label_value('CURP', funcionario.curp) }}
        {{ detail.label_value('Puesto', funcionario.puesto) }}
        {{ detail.label_value('e-mail', funcionario.email) }}
        {{ detail.label_value_boolean('En funciones', funcionario.en_funciones) }}
        {{ detail.label_value_boolean('En sentencias', funcionario.en_sentencias) }}
        {{ detail.label_value_boolean('En soportes', funcionario.en_soportes) }}
        {{ detail.label_value_boolean('En tesis y jurisprudencias', funcionario.en_tesis_jurisprudencias) }}
    {% endcall %}
    {% if current_user.can_view('AUTORIDADES FUNCIONARIOS') %}
        {% call detail.card('Autoridades') %}
            <table id="autoridades_funcionarios_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>IDs</th>
                        <th>Claves</th>
                        <th>Descripciones</th>
                    </tr>
                </thead>
            </table>
            {% if current_user.can_insert('AUTORIDADES FUNCIONARIOS') %}
                <a href="{{ url_for('autoridades_funcionarios.new_with_funcionario', funcionario_id=funcionario.id) }}" class="btn btn-primary">Agregar</a>
            {% endif %}
        {% endcall %}
    {% endif %}
    {% if current_user.can_view('FUNCIONARIOS OFICINAS') %}
        {% call detail.card('Oficinas') %}
            <table id="funcionarios_oficinas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>IDs</th>
                        <th>Claves</th>
                        <th>Descripciones</th>
                        <th>Domicilios</th>
                        <th>Distritos</th>
                    </tr>
                </thead>
            </table>
            {% if current_user.can_insert('FUNCIONARIOS OFICINAS') %}
                <a href="{{ url_for('funcionarios_oficinas.new_with_funcionario', funcionario_id=funcionario.id) }}" class="btn btn-primary">Agregar</a>
            {% endif %}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('FUNCIONARIOS') %}
        {% if funcionario.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + funcionario.nombre + '?') }}{% endif %}
        {% if funcionario.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + funcionario.nombre + '?') }}{% endif %}
    {% endif %}
    {% if current_user.can_view('AUTORIDADES FUNCIONARIOS') %}
    <script>
        $('#autoridades_funcionarios_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: false,
            searching: false,
            responsive: true,
            scrollX: true,
            ajax: {
                url: "/autoridades_funcionarios/datatable_json",
                type: "POST",
                headers: {'X-CSRF-TOKEN': "{{ csrf_token() }}"},
                dataType: "json",
                dataSrc: "data",
                data: { "funcionario_id": {{ funcionario.id }}, "estatus": "A" }
            },
            columns: [
                { data: "detalle" },
                { data: "autoridad_clave" },
                { data: "autoridad_descripcion_corta" }
            ],
            columnDefs: [
                {
                    targets: 0,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.id + '</a>';
                    }
                }
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
    {% endif %}
    {% if current_user.can_view('FUNCIONARIOS OFICINAS') %}
    <script>
        $('#funcionarios_oficinas_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: false,
            searching: false,
            responsive: true,
            scrollX: true,
            ajax: {
                url: "/funcionarios_oficinas/datatable_json",
                type: "POST",
                headers: {'X-CSRF-TOKEN': "{{ csrf_token() }}"},
                dataType: "json",
                dataSrc: "data",
                data: { "funcionario_id": {{ funcionario.id }}, "estatus": "A" }
            },
            columns: [
                { data: "detalle" },
                { data: "oficina_clave" },
                { data: "oficina_descripcion_corta" },
                { data: "oficina_domicilio_completo" },
                { data: "oficina_distrito_nombre_corto" }
            ],
            columnDefs: [
                {
                    targets: 0,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.id + '</a>';
                    }
                },
                {
                    targets: 3,
                    data: null,
                    render: function(data, type, row, meta) {
                        return (data.length > 32 ? data.substr(0, 32) + '…' : data);
                    }
                }
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
    {% endif %}
{% endblock %}
