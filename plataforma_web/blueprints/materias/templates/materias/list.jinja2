{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Materias{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_edit('materias') %}
        {% if estatus == 'A' %}{{ list.topbar_option_list_inactive('Inactivas', url_for('materias.list_inactive')) }}{% endif %}
        {% if estatus == 'B' %}{{ list.topbar_option_list_active('Activas', url_for('materias.list_active')) }}{% endif %}
    {% endif %}
    {% if current_user.can_insert('materias') %}
        {{ list.topbar_option_new('Nueva Materia', url_for('materias.new')) }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if estatus == 'A' %}{{ list.page('Materias') }}{% endif %}
    {% if estatus == 'B' %}{{ list.page('Materias inactivas') }}{% endif %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="materias_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Materias</th>
                    </tr>
                </thead>
                <tbody>
                    {% for materia in materias %}
                    <tr>
                        <td><a href="{{ url_for('materias.detail', materia_id=materia.id) }}">{{ materia.nombre }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('materias_datatable', order='asc') }}
{% endblock %}
