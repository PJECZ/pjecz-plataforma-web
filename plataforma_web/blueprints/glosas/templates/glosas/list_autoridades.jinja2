{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Glosas - Autoridades{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Glosas / Autoridades') %}
        {{ topbar.button_previous('Glosas', url_for('glosas.list_active')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="autoridades_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Claves</th>
                    <th>Autoridades</th>
                </tr>
            </thead>
            <tbody>
                {% for autoridad in autoridades %}
                <tr>
                    <td><a href="{{ url_for('glosas.list_autoridad_glosas', autoridad_id=autoridad.id) }}">{{ autoridad.clave }}</a></td>
                    <td>{{ autoridad.descripcion }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('autoridades_datatable') }}
{% endblock %}
