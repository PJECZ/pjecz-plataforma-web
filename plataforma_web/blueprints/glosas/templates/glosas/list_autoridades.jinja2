{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Glosas - Autoridades{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option_search('Buscar', url_for('glosas.search')) }}
    {{ list.topbar_option('Distritos', url_for('glosas.list_distritos'), 'fas fa-sitemap') }}
{% endblock %}

{% block content %}
    {% call list.page_breadcrumb(distrito.nombre) %}
        {{ list.page_breadcrumb_item('Glosas', link=url_for('glosas.list_active')) }}
        {{ list.page_breadcrumb_item('Distritos', link=url_for('glosas.list_distritos')) }}
    {% endcall %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="autoridades_datatable" class="table">
                <thead>
                    <tr>
                        <th>Claves</th>
                        <th>Autoridades</th>
                    </tr>
                </thead>
                <tbody>
                    {% for autoridad in autoridades %}
                    <tr>
                        <td>{{ autoridad.clave }}</td>
                        <td><a href="{{ url_for('glosas.list_autoridad_glosas', autoridad_id=autoridad.id) }}">{{ autoridad.descripcion }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('autoridades_datatable') }}
{% endblock %}
