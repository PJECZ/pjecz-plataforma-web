{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Glosas - Departamentos{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Glosas / Departamentos') %}
        {{ topbar.button_previous('Glosas', url_for('glosas.list_active')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table class="table display nowrap">
            <thead>
                <tr>
                    <th>Departamentos</th>
                </tr>
            </thead>
            <tbody>
                {% for distrito in distritos %}
                <tr>
                    <td><a href="{{ url_for('glosas.list_autoridades', distrito_id=distrito.id) }}">{{ distrito.nombre }}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}
