{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Glosas{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option_search('Buscar', url_for('glosas.search')) }}
    {% if current_user.can_edit('glosas') %}
        {% if estatus == 'A' %}{{ list.topbar_option_list_inactive('Inactivas', url_for('glosas.list_inactive')) }}{% endif %}
        {% if estatus == 'B' %}{{ list.topbar_option_list_active('Activas', url_for('glosas.list_active')) }}{% endif %}
    {% endif %}
    {% if current_user.can_insert('glosas') %}
        {{ list.topbar_option_new('Nueva Glosa', url_for('glosas.new')) }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if estatus == 'A' %}{{ list.page('Glosas') }}{% endif %}
    {% if estatus == 'B' %}{{ list.page('Glosas inactivas') }}{% endif %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="glosas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Fechas</th>
                        <th>Expedientes</th>
                        <th>Tipos de juicio</th>
                    </tr>
                </thead>
                <tbody>
                    {% for glosa in glosas %}
                    <tr>
                        <td>{{ glosa.fecha }}</td>
                        <td><a href="{{ url_for('glosas.detail', glosa_id=glosa.id) }}">{{ glosa.expediente }}</a></td>
                        <td>{{ glosa.juicio_tipo }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('glosas_datatable') }}
{% endblock %}
