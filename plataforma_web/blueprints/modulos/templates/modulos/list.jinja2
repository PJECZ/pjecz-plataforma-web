{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Modulos{% endblock %}

{% block topbar_actions %}
    {% if estatus == 'A' %}{% set title='Modulos' %}{% endif %}
    {% if estatus == 'B' %}{% set title='Modulos inactivos' %}{% endif %}
    {% call topbar.page_buttons(title) %}
        {% if current_user.can_edit('modulos') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('modulos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('modulos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('modulos') %}
            {{ topbar.button_new('Nuevo Módulo', url_for('modulos.new')) }}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('modulos.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="modulos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Creados</th>
                    <th>Nombre o descripción</th>
                    <th>Columna</th>
                </tr>
            </thead>
            <tbody>
                {% for modulo in modulos %}
                <tr>
                    <td>{{ modulo.creado.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                    <td><a href="{{ url_for('modulos.detail', modulo_id=modulo.id) }}">{{ modulo.nombre }}</a></td>
                    <td>{{ modulo.columna }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('modulos_datatable', order='desc') }}
{% endblock %}
