{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Conversaciones{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_admin('MENSAJES') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('mensajes.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('mensajes.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('MENSAJES') %}
            {{ topbar.button_new('Nueva Conversación', url_for('mensajes.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% if nuevos %}
        {% call list.card('Nuevos (no leídos)') %}
            <table id="conversaciones_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}" style="width:100%">
                <thead>
                    <tr>
                        <th>Para</th>
                    </tr>
                </thead>
                <tbody>
                    {% for nuevo in nuevos %}
                    <tr>
                        <td>{{ nuevo.usuario.nombre }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if nuevos %}
        {{ list.datatable('conversaciones_datatable') }}
    {% endif %}
{% endblock %}
