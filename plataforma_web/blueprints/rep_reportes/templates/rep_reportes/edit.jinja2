{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Reporte{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar ' + rep_reporte.descripcion) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'rep_reporte_id': rep_reporte.id} %}
        {% call f.form_tag('rep_reportes.edit', fid='rep_reporte_form', **form_kwargs) %}
            {% call f.form_group(form.rep_grafica, readonly=true) %}{% endcall %}
            {% call f.form_group(form.descripcion) %}{% endcall %}
            {% call f.form_group(form.inicio) %}{% endcall %}
            {% call f.form_group(form.termino) %}{% endcall %}
            {% call f.form_group(form.programado) %}{% endcall %}
            {% call f.form_group(form.progreso) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
