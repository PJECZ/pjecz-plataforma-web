{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Reportes{% endblock %}

{% block topbar_actions %}
    {% if estatus == 'A' %}{% set title='Reportes' %}{% endif %}
    {% if estatus == 'B' %}{% set title='Reportes inactivos' %}{% endif %}
    {% call topbar.page_buttons(title) %}
        {{ topbar.button('MÃ³dulos', url_for('modulos.list_active'), 'mdi:puzzle') }}
        {% if current_user.can_edit('rep_reportes') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('rep_reportes.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('rep_reportes.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('rep_reportes') %}
            {{ topbar.button_new('Nuevo Reporte', url_for('rep_reportes.new')) }}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('rep_reportes.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="rep_reportes_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Creados</th>
                    <th>Descripciones</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                    <th>Programado</th>
                    <th>Progreso</th>
                </tr>
            </thead>
            <tbody>
                {% for rep_reporte in rep_reportes %}
                <tr>
                    <td>{{ rep_reporte.creado.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                    <td><a href="{{ url_for('rep_reportes.detail', rep_reporte_id=rep_reporte.id) }}">{{ rep_reporte.descripcion }}</a></td>
                    <td>{{ rep_reporte.desde }}</td>
                    <td>{{ rep_reporte.hasta }}</td>
                    <td>{{ rep_reporte.programado }}</td>
                    <td>{{ rep_reporte.progreso }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('rep_reportes_datatable', order='desc') }}
{% endblock %}
