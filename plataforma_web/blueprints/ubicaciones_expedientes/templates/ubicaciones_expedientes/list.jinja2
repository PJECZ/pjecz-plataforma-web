{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Ubicacion de Expedientes{% endblock %}

{% block topbar_actions %}
    {% if current_user.can_insert('ubicaciones_expedientes') %}
        {% call list.topbar_actions() %}
            {{ list.topbar_actions_option('Nuevo Ubicación de Expedientes', url_for('ubicaciones_expedientes.new')) }}
        {% endcall %}
    {% endif %}
{% endblock %}

{% block content %}
    {{ list.page_breadcrumb('Ubicación de Expedientes') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="ubicaciones_expedientes_datatable" class="table">
                <thead>
                    <tr>
                        <th>Expediente</th>
                        <th>Ubicación</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ubicacion_expediente in ubicaciones_expedientes %}
                    <tr>
                        <td>{{ubicacion_expediente.expediente}}</td>
                        <td><a href="{{ url_for('ubicaciones_expedientes.detail', ubicacion_expediente_id=ubicacion_expediente.id) }}">{{ ubicacion_expediente.ubicacion }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#ubicaciones_expedientes_datatable').DataTable();
    </script>
{% endblock %}
