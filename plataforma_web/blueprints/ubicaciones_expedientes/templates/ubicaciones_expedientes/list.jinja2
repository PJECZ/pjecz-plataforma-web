{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Ubicacion de Expedientes{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option_search('Buscar', url_for('ubicaciones_expedientes.search')) }}
    {% if current_user.can_edit('ubicaciones_expedientes') %}
        {% if estatus == 'A' %}{{ list.topbar_option_list_inactive('Inactivas', url_for('ubicaciones_expedientes.list_inactive')) }}{% endif %}
        {% if estatus == 'B' %}{{ list.topbar_option_list_active('Activas', url_for('ubicaciones_expedientes.list_active')) }}{% endif %}
    {% endif %}
    {% if current_user.can_insert('ubicaciones_expedientes') %}
        {{ list.topbar_option_new('Nueva Ubicación de Expedientes', url_for('ubicaciones_expedientes.new')) }}
    {% endif %}
{% endblock %}

{% block content %}
    {% if autoridad %}
        {% call list.page_breadcrumb(autoridad.descripcion) %}
            {{ list.page_breadcrumb_item('Ubicacion de Expedientes', link=url_for('ubicaciones_expedientes.list_active')) }}
            {{ list.page_breadcrumb_item('Distritos', link=url_for('ubicaciones_expedientes.list_distritos')) }}
            {{ list.page_breadcrumb_item(autoridad.distrito.nombre, link=url_for('ubicaciones_expedientes.list_autoridades', distrito_id=autoridad.distrito_id)) }}
        {% endcall %}
    {% else %}
        {% if estatus == 'A'%}{{ list.page('Ubicacion de Expedientes') }}{% endif %}
        {% if estatus == 'B'%}{{ list.page('Ubicacion de Expedientes inactivas') }}{% endif %}
    {% endif %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="ubicaciones_expedientes_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        <th>Creados</th>
                        <th>Expediente</th>
                        <th>Ubicación</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ubicacion_expediente in ubicaciones_expedientes %}
                    <tr>
                        <td>{{ ubicacion_expediente.creado.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                        <td>{{ ubicacion_expediente.expediente }}</td>
                        <td><a href="{{ url_for('ubicaciones_expedientes.detail', ubicacion_expediente_id=ubicacion_expediente.id) }}">{{ ubicacion_expediente.ubicacion }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('ubicaciones_expedientes_datatable') }}
{% endblock %}
