{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Nuevo Ubicacion de Expediente{% endblock %}

{% block content %}
    {{ f.page('Nueva Ubicacion de Expediente para ' + autoridad.clave) }}
    <div class="container-fluid">
        {% call f.card() %}
            {% set form_kwargs = {'autoridad_id': autoridad.id} %}
            {% call f.form_tag('ubicaciones_expedientes.new', fid='ubicacion_expediente_form', **form_kwargs) %}
                {% call f.form_group(form.distrito, readonly=true) %}{% endcall %}
                {% call f.form_group(form.autoridad, readonly=true) %}{% endcall %}
                {% call f.form_group(form.expediente) %}{% endcall %}
                {% call f.form_group(form.ubicacion) %}{% endcall %}
                {{ form.guardar() }}
            {% endcall %}
        {% endcall %}
    </div>
{% endblock %}
