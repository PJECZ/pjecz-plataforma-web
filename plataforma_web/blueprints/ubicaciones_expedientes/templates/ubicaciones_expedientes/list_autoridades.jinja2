{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Ubicaciones de Expedientes - Autoridades{% endblock %}

{% block topbar_actions %}
    {% call list.page_breadcrumb(distrito.nombre) %}
        {{ list.page_breadcrumb_item('Ubicaciones de Expedientes', link=url_for('ubicaciones_expedientes.list_active')) }}
        {{ list.page_breadcrumb_item('Distritos', link=url_for('ubicaciones_expedientes.list_distritos')) }}
    {% endcall %}
    {% call topbar.page_buttons(title) %}
    {% endcall %}
    {{ list.topbar_option_search('Buscar', url_for('ubicaciones_expedientes.search')) }}
    {{ list.topbar_option('Distritos', url_for('ubicaciones_expedientes.list_distritos'), 'fas fa-sitemap') }}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="autoridades_datatable" class="table">
            <thead>
                <tr>
                    <th>Claves</th>
                    <th>Autoridades</th>
                </tr>
            </thead>
            <tbody>
                {% for autoridad in autoridades %}
                <tr>
                    <td><a href="{{ url_for('ubicaciones_expedientes.list_autoridad_ubicaciones_expedientes', autoridad_id=autoridad.id) }}">{{ autoridad.clave }}</a></td>
                    <td>{{ autoridad.descripcion }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('autoridades_datatable') }}
{% endblock %}
