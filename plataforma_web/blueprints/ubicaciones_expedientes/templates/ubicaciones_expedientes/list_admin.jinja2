{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Todas las Ubicaciones de Expedientes{% endblock %}

{% block topbar_actions %}
    {% if estatus == 'A' %}{% set title='Todas las Ubicaciones de Expedientes' %}{% endif %}
    {% if estatus == 'B' %}{% set title='Todas las Ubicaciones de Expedientes inactivas' %}{% endif %}
    {% call topbar.page_buttons(title) %}
        {{ topbar.button_districts('Distritos', url_for('ubicaciones_expedientes.list_distritos')) }}
        {% if autoridad %}
            {% if current_user.can_admin('ubicaciones_expedientes') %}
                {{ topbar.button_upload('Nueva Ubicaci√≥n de Expediente', url_for('ubicaciones_expedientes.new_for_autoridad', autoridad_id=autoridad.id)) }}
            {% endif %}
            {% if current_user.can_edit('ubicaciones_expedientes') %}
                {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('ubicaciones_expedientes.list_autoridad_ubicaciones_expedientes_inactive', autoridad_id=autoridad.id)) }}{% endif %}
                {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('ubicaciones_expedientes.list_autoridad_ubicaciones_expedientes', autoridad_id=autoridad.id)) }}{% endif %}
            {% endif %}
        {% else %}
            {% if current_user.can_edit('ubicaciones_expedientes') %}
                {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivas', url_for('ubicaciones_expedientes.list_inactive')) }}{% endif %}
                {% if estatus == 'B' %}{{ topbar.button_list_active('Activas', url_for('ubicaciones_expedientes.list_active')) }}{% endif %}
            {% endif %}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('ubicaciones_expedientes.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="ubicaciones_expedientes_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Creados</th>
                    <th>Autoridades</th>
                    <th>Expedientes</th>
                    <th>Ubicaciones</th>
                </tr>
            </thead>
            <tbody>
                {% for ubicacion_expediente in ubicaciones_expedientes %}
                <tr>
                    <td>{{ ubicacion_expediente.creado.strftime('%Y-%m-%d %H:%M:%S') }}</td>
                    <td>{{ ubicacion_expediente.autoridad.clave }}</td>
                    <td><a href="{{ url_for('ubicaciones_expedientes.detail', ubicacion_expediente_id=ubicacion_expediente.id) }}">{{ ubicacion_expediente.expediente }}</a></td>
                    <td>{{ ubicacion_expediente.ubicacion }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('ubicaciones_expedientes_datatable', order='desc') }}
{% endblock %}
