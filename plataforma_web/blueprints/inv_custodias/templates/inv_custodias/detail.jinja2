{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}custodias{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Custodia: ' + custodia.nombre_completo) %}
        {{ topbar.button_previous('Custodias', url_for('inv_custodias.list_active')) }}
        {% if current_user.can_edit('INV custodiaS') %}
            {{ topbar.button_edit('Editar', url_for('inv_custodias.edit', custodia_id=custodia.id)) }}
            {% if custodia.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('inv_custodias.delete', custodia_id=custodia.id)) }}{% endif %}
            {% if custodia.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('inv_custodias.recover', custodia_id=custodia.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=custodia.estatus) %}
        {{ detail.label_value('Usuario', custodia.usuario.nombres) }}
        {# {{ detail.label_value('Curp', custodia.usuario.curp) }} #}
        {{ detail.label_value('Nombre completo', custodia.nombre_completo) }}
        {{ detail.label_value('Fecha', custodia.fecha) }}
        {{ detail.label_value('CURP', custodia.curp) }}
    {% endcall %}
    {% call detail.card('EQUIPOS') %}
        <table id="inv_equipos_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>IDs</th>
                    <th>Numero de serie</th>
                    <th>Numero de inventario</th>
                    <th>Descripción</th>
                    <th>Autoridad</th>
                </tr>
            </thead>
        </table>
        {% if current_user.can_insert('INV EQUIPOS') %}
            <a href="{{ url_for('inv_equipos.new', custodia_id=custodia.id) }}" class="btn btn-primary">Agregar</a>
        {% endif %}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('INV CUSTODIAS') %}
        {% if custodia.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + custodia.nombre_completo + '?') }}{% endif %}
        {% if custodia.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + custodia.nombre_completo + '?') }}{% endif %}
    {% endif %}
       <script>
        $('#inv_equipos_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: false,
            searching: false,
            responsive: true,
            scrollX: true,
            ajax: {
                url: "/inv_equipos/datatable_json",
                type: "POST",
                headers: {'X-CSRF-TOKEN': "{{ csrf_token() }}"},
                dataType: "json",
                dataSrc: "data",
                data: {{ filtros }}
            },
            columns: [
                { data: "numero_inventario" },
                { data: "numero_serie" },
                { data: "adquisicion_fecha" }
            ],
            columnDefs: [
                {
                    targets: 0,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.descripcion + '</a>';
                    }
                }
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
{% endblock %}
