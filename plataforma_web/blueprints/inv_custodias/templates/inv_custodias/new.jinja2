{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nueva Custodia{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nueva Custodia') }}
{% endblock %}


{% block content %}
    {% call f.card() %}
        {% call f.form_tag('inv_custodias.new', fid='custodia_form') %}
            {% call f.form_group(form.nombre_completo) %}{% endcall %}
            {% call f.form_group(form.curp, redonly=true) %}{% endcall %}
            {% call f.form_group(form.fecha) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
