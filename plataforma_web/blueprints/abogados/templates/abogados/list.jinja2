{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Abogados registrados{% endblock %}

{% block topbar_actions %}
    {% call list.topbar_actions() %}
        {{ list.topbar_actions_option('Buscar Abogado', url_for('abogados.search')) }}
        {% if current_user.can_insert('abogados') %}
            {{ list.topbar_actions_option('Nuevo Abogado', url_for('abogados.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {{ list.page('Abogados registrados') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="abogados_datatable" class="table">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Libro</th>
                        <th>NÃºmero</th>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody>
                    {% for abogado in abogados %}
                    <tr>
                        <td>{{ abogado.fecha }}</td>
                        <td>{{ abogado.libro }}</td>
                        <td>{{ abogado.numero }}</td>
                        <td><a href="{{ url_for('abogados.detail', abogado_id=abogado.id) }}">{{ abogado.nombre }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('abogados_datatable', order='desc') }}
{% endblock %}
