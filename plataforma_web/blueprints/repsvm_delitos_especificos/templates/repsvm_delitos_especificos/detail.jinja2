{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Delito Especifico{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(repsvm_delito_especifico.descripcion) %}
        {{ topbar.button_previous('Delitos Especificos', url_for('repsvm_delitos_especificos.list_active')) }}
        {% if current_user.can_edit('REPSVM DELITOS ESPECIFICOS') %}
            {{ topbar.button_edit('Editar', url_for('repsvm_delitos_especificos.edit', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}
            {% if repsvm_delito_especifico.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('repsvm_delitos_especificos.delete', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}{% endif %}
            {% if repsvm_delito_especifico.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('repsvm_delitos_especificos.recover', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=repsvm_delito_especifico.estatus) %}
        {{ detail.label_value_big('Descripción', repsvm_delito_especifico.descripcion) }}
        {{ detail.label_value('Delito Generico', repsvm_delito_especifico.repsvm_delito_generico.nombre) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('REPSVM DELITOS ESPECIFICOS') %}
        {% if repsvm_delito_especifico.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + repsvm_delito_especifico.descripcion + '?') }}{% endif %}
        {% if repsvm_delito_especifico.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + repsvm_delito_especifico.descripcion + '?') }}{% endif %}
    {% endif %}
{% endblock %}
