{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}REPSVM Delito Específico{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(repsvm_delito_especifico.descripcion) %}
        {{ topbar.button_previous('Delitos Especificos', url_for('repsvm_delitos_especificos.list_active')) }}
        {% if current_user.can_edit('REPSVM DELITOS ESPECIFICOS') %}
            {{ topbar.button_edit('Editar', url_for('repsvm_delitos_especificos.edit', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}
            {% if repsvm_delito_especifico.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('repsvm_delitos_especificos.delete', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}{% endif %}
            {% if repsvm_delito_especifico.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('repsvm_delitos_especificos.recover', repsvm_delito_especifico_id=repsvm_delito_especifico.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=repsvm_delito_especifico.estatus) %}
        {{ detail.label_value_big('Descripción', repsvm_delito_especifico.descripcion) }}
        {{ detail.label_value('Delito Generico', repsvm_delito_especifico.repsvm_delito_generico.nombre) }}
    {% endcall %}
    {% if current_user.can_view('REPSVM AGRESORES') %}
        {% call detail.card('Agresores') %}
            <table id="repsvm_agresores_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>IDs</th>
                        <th>Distritos</th>
                        <th>T. Juzgados</th>
                        <th>T. Sentencias</th>
                        <th>Nombres</th>
                        <th>No. Causa</th>
                        <th>Penas Impuestas</th>
                        <th>URL</th>
                    </tr>
                </thead>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('REPSVM DELITOS ESPECIFICOS') %}
        {% if repsvm_delito_especifico.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '¿Eliminar a ' + repsvm_delito_especifico.descripcion + '?') }}{% endif %}
        {% if repsvm_delito_especifico.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '¿Recuperar a ' + repsvm_delito_especifico.descripcion + '?') }}{% endif %}
    {% endif %}
    {{ detail.config_datatable() }}
    {% if current_user.can_view('REPSVM AGRESORES') %}
        <script>
            configDataTable['ajax']['url'] = '/repsvm_agresores/datatable_json';
            configDataTable['ajax']['data'] = { 'estatus': "A", 'repsvm_delito_especifico_id': {{ repsvm_delito_especifico.id}} };
            configDataTable['columns'] = [
                { data: "detalle" },
                { data: "distrito" },
                { data: "materia_tipo_juzgado" },
                { data: "repsvm_tipo_sentencia" },
                { data: "nombre" },
                { data: "numero_causa" },
                { data: "pena_impuesta" },
                { data: "sentencia_url" }
            ];
            configDataTable['columnDefs'] = [
            {
                targets: 0, // ID
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.id + '</a>';
                }
            },
            {
                targets: 1, // Distrito
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url != '') {
                        return '<a href="' + data.url + '">' + data.nombre_corto + '</a>';
                    }
                    return data.nombre_corto;
                }
            },
            {
                targets: 2, // Materia Tipo Juzgado
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url != '') {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                    return data.clave;
                }
            },
            {
                targets: 3, // Tipo Sentencia
                data: null,
                render: function(data, type, row, meta) {
                    if (data.nombre.length > 16)
                        texto = '<span title="' + data.nombre + '">' + data.nombre.substr(0, 16) + '…' + '</span>';
                    else
                        texto = data.nombre;
                    if (data.url != '') {
                        return '<a href="' + data.url + '">' + texto + '</a>';
                    }
                    return texto;
                }
            },
            {
                targets: 4, // Nombre
                data: null,
                render: function(data, type, row, meta) {
                    if (data.length > 48)
                        return '<span title="' + data + '">' + data.substr(0, 48) + '…' + '</span>';
                    else
                        return data;
                }
            },
            {
                targets: [5, 6], // No. Causa y Pena
                data: null,
                render: function(data, type, row, meta) {
                    if (data.length > 16)
                        return '<span title="' + data + '">' + data.substr(0, 16) + '…' + '</span>';
                    else
                        return data;
                }
            },
            {
                targets: 7, // Sentencia URL
                data: null,
                render: function(data, type, row, meta) {
                    if (data != '') {
                        return '<a href="' + data + '" target="_blank"><span class="iconify" data-icon="mdi:file-download"></span></a>';
                    }
                    return '';
                }
            }
            ];
            $('#repsvm_agresores_datatable').DataTable(configDataTable);
        </script>
    {% endif %}
{% endblock %}
