{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Funcionarios - Oficinas{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_edit('FUNCIONARIOS OFICINAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('funcionarios_oficinas.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('funcionarios_oficinas.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('FUNCIONARIOS OFICINAS') %}
            {{ topbar.button_new('Nuevo Funcionario-Oficina', url_for('funcionarios_oficinas.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="funcionarios_oficinas_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre o descripci√≥n</th>
                    <th>Columna</th>
                </tr>
            </thead>
            <tbody>
                {% for funcionario_oficina in funcionarios_oficinas %}
                <tr>
                    <td><a href="{{ url_for('funcionarios_oficinas.detail', funcionario_oficina_id=funcionario_oficina.id) }}">{{ funcionario_oficina.descripcion }}</a></td>
                    <td>{{ funcionario_oficina.columna }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('funcionarios_oficinas_datatable') }}
{% endblock %}
