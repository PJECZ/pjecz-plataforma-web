{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Nueva Transcripción{% endblock %}

{% block custom_head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/dropzone.css') }}" type="text/css">
{% endblock %}

{% block content %}
    {{ f.page('Nueva Transcripción') }}
    <div class="container-fluid">
        {% call f.card() %}
            {% call f.form_tag('transcripciones.new', fid='transcripcion_form') %}
                {% call f.form_group(form.descripcion) %}{% endcall %}
                {% call f.form_group(form.expediente) %}{% endcall %}
                {% call f.form_group(form.audio, class="dropzone") %}{% endcall %}
                {{ form.guardar() }}
            {% endcall %}
        {% endcall %}
    </div>
{% endblock %}
