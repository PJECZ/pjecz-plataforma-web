{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nueva Identidad de Género{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nueva Identidad de Género') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% call f.form_tag('identidades_generos.new', fid='identidad_genero_form') %}
            {% call f.form_group(form.nombre_actual) %}{% endcall %}
            {% call f.form_group(form.nombre_anterior) %}{% endcall %}
            {% call f.form_group(form.fecha_nacimiento) %}{% endcall %}
            {% call f.form_group(form.lugar_nacimiento) %}{% endcall %}
            {% call f.form_group(form.genero_anterior) %}{% endcall %}
            {% call f.form_group(form.genero_actual) %}{% endcall %}
            {% call f.form_group(form.nombre_padre) %}{% endcall %}
            {% call f.form_group(form.nombre_madre) %}{% endcall %}
            {% call f.form_group(form.procedimiento) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
