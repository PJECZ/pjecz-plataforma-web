{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Nueva Audiencia de Salas{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Nueva Audiencia de Salas') }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% call f.form_tag('audiencias.new_sape', fid='audiencia_form') %}
            {# Comunes #}
            {% call f.form_group(form.distrito, readonly=true) %}{% endcall %}
            {% call f.form_group(form.autoridad, readonly=true) %}{% endcall %}
            {% call f.form_group(form.tiempo_fecha) %}{% endcall %}
            {% call f.form_group(form.tiempo_hora) %}{% endcall %}
            {% call f.form_group(form.tipo_audiencia) %}{% endcall %}
            <h2 class="h4">Civil, Familiar, Mercantil o Laboral</h2>
            {% call f.form_group(form.expediente) %}{% endcall %}
            {% call f.form_group(form.actores) %}{% endcall %}
            {% call f.form_group(form.demandados) %}{% endcall %}
            <h2 class="h4">Penal</h2>
            {% call f.form_group(form.toca) %}{% endcall %}
            {% call f.form_group(form.expediente_origen) %}{% endcall %}
            {% call f.form_group(form.delitos) %}{% endcall %}
            {% call f.form_group(form.origen) %}{% endcall %}
            {# Bot√≥n guardar #}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
