{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Agenda de Audiencias{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {{ topbar.button_districts('Departamentos', url_for('audiencias.list_distritos')) }}
        {% if autoridad %}
            {% if current_user.can_admin('audiencias') or (current_user.can_insert('audiencias') and current_user.autoridad_id == autoridad.id) %}
                {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('audiencias.list_inactive')) }}{% endif %}
                {% if estatus == 'B' %}{{ topbar.button_list_active('Activos', url_for('audiencias.list_active')) }}{% endif %}
            {% endif %}
            {% if current_user.can_insert('audiencias') and current_user.autoridad_id == autoridad.id %}
                {{ topbar.button_new('Nueva Audiencia', url_for('audiencias.new')) }}
            {% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="audiencias_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Fechas y horas</th>
                    <th>Tipos de audiencias</th>
                    {% if current_user.autoridad.audiencia_categoria == 'DISTRITALES' %}
                    <th>Expedientes</th>
                    <th>Actores</th>
                    <th>Demandados</th>
                    <th>Tocas</th>
                    <th>Exp. origen</th>
                    <th>Imputados</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                {% for audiencia in audiencias %}
                <tr>
                    <td>{{ audiencia.tiempo }}</td>
                    <td><a href="{{ url_for('audiencias.detail', audiencia_id=audiencia.id) }}">{{ audiencia.tipo_audiencia }}</a></td>
                    {% if current_user.autoridad.audiencia_categoria == 'DISTRITALES' %}
                    <td>{% if audiencia.expediente %}{{ audiencia.expediente }}{% endif %}</td>
                    <td>{% if audiencia.actores %}{{ audiencia.actores }}{% endif %}</td>
                    <td>{% if audiencia.demandados %}{{ audiencia.demandados }}{% endif %}</td>
                    <td>{% if audiencia.toca %}{{ audiencia.toca }}{% endif %}</td>
                    <td>{% if audiencia.expediente_origen %}{{ audiencia.expediente_origen }}{% endif %}</td>
                    <td>{% if audiencia.imputados %}{{ audiencia.imputados }}{% endif %}</td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#audiencias_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: false,
            searching: false,
            responsive: true,
            scrollX: true,
            ajax: {
                url: "/audiencias/datatable_json",
                type: "POST",
                headers: {'X-CSRF-TOKEN': "{{ csrf_token() }}"},
                dataType: "json",
                dataSrc: "data",
                data: {{ filtros }}
            },
            columns: [
                { data: "tiempo" },
                { data: "detalle" },
                { data: "expediente" }
                { data: "actores" }
                { data: "demandados" }
                { data: "toca" }
                { data: "expediente_origen" }
                { data: "imputados" }
            ],
            columnDefs: [
                {
                    targets: 1,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.descripcion + '</a>';
                    }
                },
                {
                    targets: 2,
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">PDF</a>';
                    }
                }
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Ãšltimo",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
{% endblock %}
