{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Editar Audiencia{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Editar ' + audiencia.tipo_audiencia) }}
{% endblock %}

{% block content %}
    {% call f.card() %}
        {% set form_kwargs = {'audiencia_id': audiencia.id} %}
        {% call f.form_tag('audiencias.edit', fid='audiencia_form', **form_kwargs) %}
            {% call f.form_group(form.tiempo) %}{% endcall %}
            {% call f.form_group(form.tipo_audiencia) %}{% endcall %}
            {% call f.form_group(form.guardar) %}{% endcall %}
        {% endcall %}
    {% endcall %}
{% endblock %}
