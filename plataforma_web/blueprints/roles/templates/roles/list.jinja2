{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Roles{% endblock %}

{% block content %}
    {{ list.page('Roles') }}
    <div class="container-fluid">
        {% call list.card() %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Rol</th>
                    </tr>
                </thead>
                <tbody>
                    {% for rol in roles %}
                    <tr>
                        <td><a href="{{ url_for('roles.detail', rol_id=rol.id) }}">{{ rol.nombre }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}
