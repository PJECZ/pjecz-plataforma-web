{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Rol{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Rol ' + rol.nombre) %}
        {{ topbar.button_previous('Roles', url_for('roles.list_active')) }}
        {% if current_user.can_edit('ROLES') %}
            {{ topbar.button_edit('Editar', url_for('roles.edit', rol_id=rol.id)) }}
            {% if rol.estatus == 'A' %}{{ topbar.button_delete('Eliminar', url_for('roles.delete', rol_id=rol.id)) }}{% endif %}
            {% if rol.estatus == 'B' %}{{ topbar.button_recover('Recuperar', url_for('roles.recover', rol_id=rol.id)) }}{% endif %}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% if current_user.can_view('PERMISOS') %}
        {% call detail.card('Permisos') %}
            <table id="permisos_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Modulos</th>
                        <th>Niveles</th>
                    </tr>
                </thead>
            </table>
            {% if current_user.can_insert('PERMISOS') %}
            <a href="{{ url_for('permisos.new_with_rol', rol_id=rol.id) }}" class="btn btn-primary">Agregar</a>
            {% endif %}
        {% endcall %}
    {% endif %}
    {% if current_user.can_view('USUARIOS_ROLES') %}
        {% call detail.card('Usuarios') %}
            <table id="usuarios_roles_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>e-mail</th>
                        <th>Nombres completos</th>
                        <th>Puestos</th>
                    </tr>
                </thead>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {% if current_user.can_edit('ROLES') %}
        {% if rol.estatus == 'A' %}{{ modals.custom_javascript_delete('Eliminar', '多Eliminar a ' + rol.nombre + '?') }}{% endif %}
        {% if rol.estatus == 'B' %}{{ modals.custom_javascript_recover('Recuperar', '多Recuperar a ' + rol.nombre + '?') }}{% endif %}
    {% endif %}
    {% if current_user.can_edit('PERMISOS') %}
        {{ modals.custom_javascript('Eliminar', '多Eliminar ese permiso del rol?', 'DeletePermiso') }}
    {% endif %}
    {% if current_user.can_edit('USUARIOS ROLES') %}
        {{ modals.custom_javascript('Eliminar', '多Eliminar ese usuario del rol?', 'DeleteUsuarioRol') }}
    {% endif %}
    {{ detail.config_datatable() }}
    {% if current_user.can_view('PERMISOS') %}
        <script>
            configDataTable['ajax']['url'] = '/permisos/datatable_json';
            configDataTable['ajax']['data'] = { 'estatus': "A", 'rol_id': {{ rol.id}} };
            configDataTable['columns'] = [
                { data: "detalle" },
                { data: "modulo" },
                { data: "nivel" }
            ];
            configDataTable['columnDefs'] = [
                {
                    targets: 0, // detalle
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.nombre + '</a>';
                    }
                },
                {
                    targets: 1, // modulo
                    data: null,
                    render: function(data, type, row, meta) {
                        if (data.url == '') {
                            return data.nombre;
                        } else {
                            return '<a href="' + data.url + '">' + data.nombre + '</a>';
                        }
                    }
                }
            ];
            $('#permisos_datatable').DataTable(configDataTable);
        </script>
    {% endif %}
    {% if current_user.can_view('USUARIOS_ROLES') %}
        <script>
            configDataTable['ajax']['url'] = '/usuarios_roles/datatable_json';
            configDataTable['ajax']['data'] = { 'estatus': "A", 'rol_id': {{ rol.id}} };
            configDataTable['columns'] = [
                { data: "detalle" },
                { data: "usuario" },
                { data: "usuario_nombre" },
                { data: "usuario_puesto" }
            ];
            configDataTable['columnDefs'] = [
                {
                    targets: 0, // detalle
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                }
            ];
            $('#usuarios_datatable').DataTable(configDataTable);
        </script>
    {% endif %}
{% endblock %}
