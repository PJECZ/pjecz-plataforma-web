{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Bitácoras{% endblock %}

{% block topbar_actions %}
    {{ topbar.page('Bitácoras') }}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="bitacoras_datatable" class="table display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Tiempos</th>
                    <th>Usuarios e-mail</th>
                    <th>Módulos</th>
                    <th>Descripciones</th>
                    <th>URL</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#bitacoras_datatable').DataTable({
            order: [[ 0, "desc" ]],
            processing: true,
            serverSide: true,
            scrollX: true,
            ordering: false,
            searching: false,
            ajax: {
                url: "/bitacoras/ajax"
            },
            columns: [
                { data: 'creado' },
                { data: 'usuario_email' },
                { data: 'modulo' },
                { data: 'descripcion' },
                {
                    data: 'url',
                    render: function(data, type, row) { return "<a href='" + data + "' target='_blank'> <i class='fa fa-external-link'></i></a>" }
                }
            ],
            columnDefs: [ {
                targets: 0,
                type: "date",
                render: function (data, type, row, meta) {
                    return moment.utc(data).local().format("YYYY-MM-DD HH:mm:ss");
                }
            } ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Página _PAGE_ de _PAGES_",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            },
            responsive: true
        });
    </script>
{% endblock %}
