{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Soportes Tickets{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {% if current_user.can_view('SOPORTES CATEGORIAS') %}
            {{ topbar.button('Categorías', url_for('soportes_categorias.list_active'), 'mdi:car-wrench') }}
        {% endif %}
        {% if current_user.can_insert('SOPORTES TICKETS') %}
            {{ topbar.button_new('Nuevo Ticket', url_for('soportes_tickets.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% if abiertos %}
        {% call list.card('Abiertos') %}
            <table id="soportes_tickets_abiertos_datatable" class="table display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Categoría</th>
                        <th>Oficina</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for abierto in abiertos %}
                    <tr>
                        <td><a href="{{ url_for('soportes_tickets.detail', soporte_ticket_id=abierto.id) }}">{{ abierto.id }}</a></td>
                        <td>{{ abierto.usuario.nombre }}</td>
                        <td>{{ abierto.soporte_categoria.nombre }}</td>
                        <td>{{ abierto.usuario.oficina.clave }}</td>
                        <td>{{ abierto.descripcion | truncate(48) }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    {% endif %}
    {% if trabajados %}
        {% call list.card('Trabajando') %}
            {% if current_user.can_insert('SOPORTES CATEGORIAS') %}
                <table id="soportes_tickets_procesando_datatable" class="table display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Oficina</th>
                            <th>Categoría</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for trabajado in trabajados %}
                        <tr>
                            <td><a href="{{ url_for('soportes_tickets.detail', soporte_ticket_id=trabajado.id) }}">{{ trabajado.id }}</a></td>
                            <td>{{ trabajado.usuario.nombre }}</td>
                            <td>{{ trabajado.usuario.oficina.clave }}</td>
                            <td>{{ trabajado.soporte_categoria.nombre }}</td>
                            <td>{{ trabajado.descripcion | truncate(48) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}}
                <table id="soportes_tickets_procesando_datatable" class="table display nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Categoría</th>
                            <th>Técnico</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for trabajado in trabajados %}
                        <tr>
                            <td><a href="{{ url_for('soportes_tickets.detail', soporte_ticket_id=trabajado.id) }}">{{ trabajado.id }}</a></td>
                            <td>{{ trabajado.usuario.nombre }}</td>
                            <td>{{ trabajado.soporte_categoria.nombre }}</td>
                            <td>{{ trabajado.funcionario.nombre }}</td>
                            <td>{{ trabajado.descripcion | truncate(48) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        {% endcall %}
    {% endif %}
    {% if terminados %}
        {% call list.card('Terminados') %}
            <table id="soportes_tickets_terminados_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Categoría</th>
                        <th>Técnico</th>
                        <th>Soluciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for terminado in terminados %}
                    <tr>
                        <td><a href="{{ url_for('soportes_tickets.detail', soporte_ticket_id=terminado.id) }}">{{ terminado.id }}</a></td>
                        <td>{{ terminado.usuario.nombre }}</td>
                        <td>{{ terminado.soporte_categoria.nombre }}</td>
                        <td>{{ terminado.funcionario.nombre }}</td>
                        <td>{{ terminado.soluciones | truncate(48) }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    {% endif %}
    {% if cancelados %}
        {% call list.card('Cancelados') %}
            <table id="soportes_tickets_cancelados_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cancelado in cancelados %}
                    <tr>
                        <td><a href="{{ url_for('soportes_tickets.detail', soporte_ticket_id=cancelado.id) }}">{{ cancelado.id }}</a></td>
                        <td>{{ cancelado.usuario.nombre }}</td>
                        <td>{{ cancelado.descripcion }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    {% endif %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('soportes_tickets_abiertos_datatable') }}
    {{ list.datatable('soportes_tickets_procesando_datatable') }}
    {{ list.datatable('soportes_tickets_terminados_datatable') }}
    {{ list.datatable('soportes_tickets_cancelados_datatable') }}
    <script>
    window.setTimeout(function () {
        window.location.reload();
    }, 300000);
    </script>
{% endblock %}
