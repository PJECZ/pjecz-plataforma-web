{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Tickets Cerrados{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Tickets Cerrados') %}
        {% if current_user.can_view('SOPORTES CATEGORIAS') %}
            {{ topbar.button('Categorías', url_for('soportes_categorias.list_active'), 'mdi:car-wrench') }}
        {% endif %}
        {{ topbar.button_primary('Sin Atender', url_for('soportes_tickets.list_active'), 'mdi:plus-circle') }}
        {{ topbar.button_primary('Trabajando', url_for('soportes_tickets.list_working'), 'mdi:play-circle') }}
        {{ topbar.button('Pendientes', url_for('soportes_tickets.list_pending'), 'mdi:pause-circle') }}
        {{ topbar.button('Terminados', url_for('soportes_tickets.list_done'), 'mdi:check-circle') }}
        {{ topbar.button('Cancelados', url_for('soportes_tickets.list_cancel'), 'mdi:close-circle') }}
        {% if current_user.can_insert('SOPORTES TICKETS') %}
            {{ topbar.button_new('Nuevo Ticket', url_for('soportes_tickets.new')) }}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('soportes_tickets.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card('Cerrados') %}
        <table id="soportes_tickets_cerrados_datatable" class="table display nowrap" style="width:100%; background-color:#eceff1;">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Oficina</th>
                    <th>Categoría</th>
                    <th>Descripción</th>
                    <th>Técnico</th>
                    <th>Soluciones</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    <script>
        $('#soportes_tickets_cerrados_datatable').DataTable({
            processing: true,
            serverSide: true,
            ordering: true,
            searching: false,
            responsive: true,
            scrollX: true,
            order: [[ 0, "desc" ]],
            ajax: {
                url: "/soportes_tickets/datatable_json",
                type: "POST",
                headers: { "X-CSRF-TOKEN": "{{ csrf_token() }}" },
                dataType: "json",
                dataSrc: "data",
                data: { "estatus": "A", "estado": "CERRADO" }
            },
            columns: [
                { data: "id" },
                { data: "usuario" },
                { data: "oficina" },
                { data: "categoria" },
                { data: "descripcion" },
                { data: "tecnico" },
                { data: "soluciones" }
            ],
            columnDefs: [
                {
                    targets: 0, // ID
                    data: null,
                    render: function(data, type, row, meta) {
                        return '<a href="' + data.url + '">' + data.id + '</a>';
                    }
                },
                {
                    targets: [1, 3, 5], // Usuario, Categoría, Técnico
                    data: null,
                    render: function(data, type, row, meta) {
                        if(data.nombre.length > 32)
                            texto = '<span title="' + data.nombre + '">' + data.nombre.substr(0, 32) + '…' + '</span>';
                        else
                            texto = data.nombre;
                        if(data.url == '')
                            return texto;
                        else
                            return '<a href="' + data.url + '">' + texto + '</a>';
                    }
                },
                {
                    targets: 2, // Oficina
                    data: null,
                    render: function(data, type, row, meta) {
                        texto = '<span title="' + data.nombre + '">' + data.clave + '</span>';
                        if(data.url == '')
                            return texto;
                        else
                            return '<a href="' + data.url + '">' + texto + '</a>';
                    }
                },
                {
                    targets: [4, 6],
                    data: null,
                    render: function(data, type, row, meta) {
                        if(data.length > 32)
                            return '<span title="' + data + '">' + data.substr(0, 32) + '…' + '</span>';
                        return data;
                    }
                }
            ],
            language: {
                lengthMenu: "Mostrar _MENU_",
                search: "Filtrar:",
                zeroRecords: "No se encontraron registros",
                info: "Total de registros _TOTAL_ ",
                infoEmpty: "No hay registros",
                infoFiltered: "(_TOTAL_ filtrados de _MAX_ registros)",
                oPaginate: {
                    sFirst: "Primero",
                    sLast: "Último",
                    sNext: "Siguiente",
                    sPrevious: "Anterior"
                }
            }
        });
    </script>
{% endblock %}
