{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Escrituras{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons(titulo) %}
        {{ topbar.button('Aprobadas', url_for('not_escrituras.list_approved'), 'mdi:table-clock') }}
        {% if show_button_list_update %}
            {{ topbar.button('Corregidas', url_for('not_escrituras.list_update'), 'mdi:table-clock') }}
        {% endif %}
        {% if show_button_list_working %}
            {{ topbar.button('Trabajando', url_for('not_escrituras.list_working'), 'mdi:table-heart') }}
        {% endif %}
        {% if show_button_list_send %}
            {{ topbar.button('Envíadas', url_for('not_escrituras.list_send'), 'mdi:table-heart') }}
        {% endif %}
        {% if show_button_list_all %}
            {{ topbar.button('Todos', url_for('not_escrituras.list_all'), 'mdi:table') }}
        {% endif %}
        {% if current_user.can_edit('NOT ESCRITURAS') %}
            {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivos', url_for('not_escrituras.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ topbar.button_list_active('Aprobados', url_for('not_escrituras.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_insert('NOT ESCRITURAS') %}
            {{ topbar.button_new('Nuevo Escritura', url_for('not_escrituras.new')) }}
        {% endif %}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="not_escrituras_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %} display nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Distrito</th>
                    <th>Notaría</th>
                    <th>Estado</th>
                </tr>
            </thead>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.config_datatable() }}
    <script>
        configDataTable['ajax']['url'] = '/not_escrituras/datatable_json';
        configDataTable['ajax']['data'] = {{ filtros }};
        configDataTable['columns'] = [
            { data: 'detalle' },
            { data: 'distrito' },
            { data: 'notaria' },
            { data: 'estado' }
        ];
        configDataTable['columnDefs'] = [
            {
                targets: 0, // detalle
                data: null,
                render: function(data, type, row, meta) {
                    return '<a href="' + data.url + '">' + data.id + '</a>';
                }
            },
            {
                targets: 1, // distrito
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url == '') {
                        return data.nombre_corto;
                    } else {
                        return '<a href="' + data.url + '">' + data.nombre_corto + '</a>';
                    }
                }
            },
            {
                targets: 2, // notaria
                data: null,
                render: function(data, type, row, meta) {
                    if (data.url == '') {
                        return data.clave;
                    } else {
                        return '<a href="' + data.url + '">' + data.clave + '</a>';
                    }
                }
            },
        ];
        $('#not_escrituras_datatable').DataTable(configDataTable);
    </script>
{% endblock %}
