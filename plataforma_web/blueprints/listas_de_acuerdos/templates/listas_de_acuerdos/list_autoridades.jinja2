{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Listas de Acuerdos{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option('Buscar', url_for('listas_de_acuerdos.search'), 'fas fa-search') }}
    {{ list.topbar_option('Distritos', url_for('listas_de_acuerdos.list_distritos'), 'fas fa-sitemap') }}
{% endblock %}

{% block content %}
    {% call list.page_breadcrumb(distrito.nombre) %}
        {{ list.page_breadcrumb_item('Listas de Acuerdos', link=url_for('listas_de_acuerdos.list_active')) }}
        {{ list.page_breadcrumb_item('Distritos', link=url_for('listas_de_acuerdos.list_distritos')) }}
    {% endcall %}
    <div class="container-fluid">
        {% call list.card() %}
        <table id="autoridades_datatable" class="table">
            <thead>
                <tr>
                    <th>Autoridades</th>
                </tr>
            </thead>
            <tbody>
                {% for autoridad in autoridades %}
                <tr>
                    <td><a href="{{ url_for('listas_de_acuerdos.list_autoridad_listas_de_acuerdos', autoridad_id=autoridad.id) }}">{{ autoridad.descripcion }}</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('autoridades_datatable') }}
{% endblock %}
