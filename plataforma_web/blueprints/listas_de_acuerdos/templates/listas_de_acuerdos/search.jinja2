{% extends 'layouts/app.jinja2' %}
{% import 'macros/form.jinja2' as f with context %}

{% block title %}Buscar Listas de Acuerdos{% endblock %}

{% block content %}
    {{ f.page('Buscar Listas de Acuerdos') }}
    <div class="container-fluid">
        {% call f.form_tag('listas_de_acuerdos.search', fid='listas_de_acuerdos_form') %}
            {% call f.form_group(form.distrito) %}{% endcall %}
            {% call f.form_group(form.autoridad) %}{% endcall %}
            {% call f.form_group(form.fecha_desde) %}{% endcall %}
            {% call f.form_group(form.fecha_hasta) %}{% endcall %}
            {{ form.buscar() }}
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ f.js_select_distrito_autoridad(distritos) }}
{% endblock %}
