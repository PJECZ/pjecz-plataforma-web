{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Listas de Acuerdos{% endblock %}

{% block topbar_actions %}
    {% if autoridad %}
        {% set title='Listas de Acuerdos de ' + autoridad.clave %}
    {% else %}
        {% if estatus == 'A' %}{% set title='Listas de Acuerdos' %}{% endif %}
        {% if estatus == 'B' %}{% set title='Listas de Acuerdos inactivas' %}{% endif %}
    {% endif %}
    {% call topbar.page_buttons(title) %}
        {{ topbar.button_districts('Distritos', url_for('listas_de_acuerdos.list_distritos')) }}
        {% if autoridad %}
            {% if current_user.can_admin('listas_de_acuerdos') or (current_user.can_edit('listas_de_acuerdos') and current_user.autoridad_id == autoridad.id) %}
                {% if estatus == 'A' %}{{ topbar.button_list_inactive('Inactivas', url_for('listas_de_acuerdos.list_inactive')) }}{% endif %}
                {% if estatus == 'B' %}{{ topbar.button_list_active('Activas', url_for('listas_de_acuerdos.list_active')) }}{% endif %}
            {% endif %}
            {% if current_user.can_admin('listas_de_acuerdos') %}
                {{ topbar.button_upload('Subir', url_for('listas_de_acuerdos.new_for_autoridad', autoridad_id=autoridad.id)) }}
            {% elif current_user.can_insert('listas_de_acuerdos') and current_user.autoridad_id == autoridad.id %}
                {{ topbar.button_upload('Subir', url_for('listas_de_acuerdos.new')) }}
            {% endif %}
            {% if current_user.can_admin('listas_de_acuerdos') and current_user.can_insert('tareas') %}
                {{ topbar.button_refresh('Refrescar', url_for('listas_de_acuerdos.refresh', autoridad_id=autoridad.id)) }}
            {% endif %}
        {% endif %}
        {{ topbar.button_search('Buscar', url_for('listas_de_acuerdos.search')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call list.card() %}
        <table id="listas_de_acuerdos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
            <thead>
                <tr>
                    {% if current_user.can_admin('listas_de_acuerdos') %}<th>Creados</th>{% endif %}
                    <th>Fechas</th>
                    <th>Descripciones</th>
                    <th>Archivos</th>
                </tr>
            </thead>
            <tbody>
                {% for lista_de_acuerdo in listas_de_acuerdos %}
                <tr>
                    {% if current_user.can_admin('listas_de_acuerdos') %}<td>{{ lista_de_acuerdo.creado.strftime('%Y-%m-%d %H:%M') }}</td>{% endif %}
                    <td>{{ lista_de_acuerdo.fecha }}</td>
                    <td><a href="{{ url_for('listas_de_acuerdos.detail', lista_de_acuerdo_id=lista_de_acuerdo.id) }}">{{ lista_de_acuerdo.descripcion }}</a></td>
                    <td><a href="{{ lista_de_acuerdo.url }}" target="_blank">PDF <i class="fa fa-external-link"></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('listas_de_acuerdos_datatable', order='desc') }}
{% endblock %}
