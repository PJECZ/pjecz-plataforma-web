{% extends 'layouts/app.jinja2' %}
{% import 'macros/list.jinja2' as list with context %}

{% block title %}Listas de Acuerdos{% endblock %}

{% block topbar_actions %}
    {{ list.topbar_option_search('Buscar', url_for('listas_de_acuerdos.search')) }}
    {{ list.topbar_option('Distritos', url_for('listas_de_acuerdos.list_distritos'), 'fas fa-sitemap') }}
    {% if autoridad %}
        {% if current_user.can_admin('listas_de_acuerdos') %}
            {{ list.topbar_option_upload('Subir', url_for('listas_de_acuerdos.new_for_autoridad', autoridad_id=autoridad.id)) }}
        {% elif current_user.can_insert('listas_de_acuerdos') and current_user.autoridad_id == autoridad.id %}
            {{ list.topbar_option_upload('Subir', url_for('listas_de_acuerdos.new')) }}
        {% endif %}
        {% if current_user.can_edit('listas_de_acuerdos') and current_user.autoridad_id == autoridad.id %}
            {% if estatus == 'A' %}{{ list.topbar_option_list_inactive('Inactivas', url_for('listas_de_acuerdos.list_inactive')) }}{% endif %}
            {% if estatus == 'B' %}{{ list.topbar_option_list_active('Activas', url_for('listas_de_acuerdos.list_active')) }}{% endif %}
        {% endif %}
        {% if current_user.can_admin('listas_de_acuerdos') and current_user.can_insert('tareas') %}
            {{ list.topbar_option_refresh('Refrescar', url_for('listas_de_acuerdos.refresh', autoridad_id=autoridad.id)) }}
        {% endif %}
    {% endif %}
{% endblock %}

{% block content %}
    {% if autoridad %}
        {% call list.page_breadcrumb(autoridad.descripcion) %}
            {{ list.page_breadcrumb_item('Listas de Acuerdos', link=url_for('listas_de_acuerdos.list_active')) }}
            {{ list.page_breadcrumb_item('Distritos', link=url_for('listas_de_acuerdos.list_distritos')) }}
            {{ list.page_breadcrumb_item(autoridad.distrito.nombre, link=url_for('listas_de_acuerdos.list_autoridades', distrito_id=autoridad.distrito_id)) }}
        {% endcall %}
    {% else %}
        {% if estatus == 'A'%}{{ list.page('Listas de Acuerdos') }}{% endif %}
        {% if estatus == 'B'%}{{ list.page('Listas de Acuerdos inactivas') }}{% endif %}
    {% endif %}
    <div class="container-fluid">
        {% call list.card() %}
            <table id="listas_de_acuerdos_datatable" class="table {% if estatus == 'B'%}table-dark{% endif %}">
                <thead>
                    <tr>
                        {% if current_user.can_admin('listas_de_acuerdos') %}<th>Creados</th>{% endif %}
                        <th>Fechas</th>
                        <th>Descripciones</th>
                        <th>Listas de Acuerdos PDFs</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lista_de_acuerdo in listas_de_acuerdos %}
                    <tr>
                        {% if current_user.can_admin('listas_de_acuerdos') %}<td>{{ lista_de_acuerdo.creado.strftime('%Y-%m-%d %H:%M') }}</td>{% endif %}
                        <td><a href="{{ url_for('listas_de_acuerdos.detail', lista_de_acuerdo_id=lista_de_acuerdo.id) }}">{{ lista_de_acuerdo.fecha }}</a></td>
                        <td>{{ lista_de_acuerdo.descripcion }}</td>
                        <td><a href="{{ lista_de_acuerdo.url }}" target="_blank">{{ lista_de_acuerdo.archivo }} <i class="fas fa-external-link-alt"></a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endcall %}
    </div>
{% endblock %}

{% block custom_javascript %}
    {{ list.datatable('listas_de_acuerdos_datatable', order='desc') }}
{% endblock %}
